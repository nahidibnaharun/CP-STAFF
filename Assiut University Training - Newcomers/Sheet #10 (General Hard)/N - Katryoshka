void solve(){
    
 ll n,m,k;
 cin >> n>> m >>k;
 ll ans =min({n,m,k});
 n-=ans;
 m-=ans;
 k-=ans;
 
 ll l=max(min(n/2,k),min({n/2,m/2,k}));
 ans+=l;
 
 n-=2*l;
 if(m!=0)m-=2*l;
 k-=l;
 
 l=min(n/2,k);
 ans+=l;
 
 
 cout<<ans ;
}

    

