#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF=(1LL<<62);
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
ll n,m;cin>>n>>m;
ll pv=0,cr=0;
ll pnt=0;
for(ll i=0;i<n;i++){
    ll a,b;cin>>a>>b;
    ll d=a-pv,np=b^cr;
    if((d%2)==np)pnt+=d;
    else pnt+=max(0LL,d-1);
    pv=a;cr=b;
}
pnt+=(m-pv);
cout<<pnt;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
