#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e17;
/*
//      _   _  __  _   _
_____
_____
//     / | / / / _ \ \ \__\ \\__  _\\  _  \ 
//    /  |/ / / /_\ \ \  _ \  \ \   \ \ \  \ 
//   / /|  / / __  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
   int n;
		cin >> n;
		vector<int> c(n + 1), id(n + 1);
		for (int i = 0; i < n; ++i) {
			int x; cin>>x;
			++c[x];
			id[x]=i+1;
		}
		int ans = -1;
		for (int i=0;i<=n;++i){
			if (c[i]==1){
				ans=id[i]; break;
			}
		}
		cout<<ans;
 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
