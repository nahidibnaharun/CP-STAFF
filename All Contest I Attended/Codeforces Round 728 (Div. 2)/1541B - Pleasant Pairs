#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
const int INF=500;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
 int n;cin>>n;vector<pair<int,int>>v;
 for(int i=0;i<n;i++){
    int x;cin>>x;v.push_back({x,i+1});
 }sort(v.begin(),v.end());
 int ans=0;
 for(int i=0;i<n;i++){
    for(int j=i+1;j<n;j++){
        if(1ll* v[i].first * v[j].first == v[i].second + v[j].second)ans++;
        if(v[i].first *v[j].first>(n+n-1))break;
    }
 }cout<<ans<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
    solve();
    // cout<<endl;
    }
}
