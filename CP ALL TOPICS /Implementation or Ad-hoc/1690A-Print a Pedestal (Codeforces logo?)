#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
static const int INF = 1000000000;
const ll M=1e9+1;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
 int n;cin>>n;
 for(int i=3;i<n;i++){
    int c=(n-i)/2,b=n-i-c;
    if(c>1 && b+1<i){
        c--;b++;
    }
    if(i>b && b>c){
        cout<<b<<" "<<i<<" "<<c<<endl;
        return;
    }
 }
    // cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
}
