void solve(){
  int n;cin>>n;
  vector<pair<int,int>>v;
  for(int i=0;i<n;++i){
    int x,y;cin>>x>>y;
    v.push_back({y,x});
  }
  sort(v.rbegin(),v.rend());
  ll cnt=1,ans=0;
  for(auto x:v){
    if(cnt<=0)break;
    cnt--;
    ans+=x.second;
    cnt+=x.first;
  }cout<<ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
