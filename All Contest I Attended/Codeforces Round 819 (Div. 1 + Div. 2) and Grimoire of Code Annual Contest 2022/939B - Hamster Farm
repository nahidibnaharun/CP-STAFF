void solve(){
	ull n;ll k;cin>>n>>k;
	ull mn=1000000000000000000,ans=0,box=0,m;
	for(ll i=0;i<k;i++){
		cin>>m;
		if(mn>(n%m)){
			mn=n%m;
			ans=i+1;
			box=n/m;
		}
	}
	cout<<ans<<' '<<box<<'\n';
}




int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

