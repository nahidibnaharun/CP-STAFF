void solve(){
ull a;cin>>a;a++;
if(a%4==0){
    ull d=a/4;
    if(d%2==0){
        cout<<--d<<" "<<0;
    }
    else{
        cout<<--d<<" "<<3;
    }
}
else{
    ull d=a/4,x=a%4;
    d++;
    if(d%2==0){
        cout<<--d<<" "<<4-x;
    }
    else{
        cout<<--d<<" "<<--(x);
    }
}
}
    
