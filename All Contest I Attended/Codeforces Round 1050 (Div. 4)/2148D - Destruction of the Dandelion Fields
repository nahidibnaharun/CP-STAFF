#include<bits/stdc++.h>
#include <numeric>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e17+7;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
int n;cin>>n;
vector<int>a(n),p[2];for(auto &x:a)cin>>x;
for(int i:a)p[i%2].push_back(i);
ll ans=0;
if(p[1].size())ans+=accumulate(p[0].begin(),p[0].end(),0LL);
sort(p[1].rbegin(),p[1].rend());
int m=p[1].size();
for(int i=0;i<(m+1)/2;i++)ans+=p[1][i];
cout<<ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
