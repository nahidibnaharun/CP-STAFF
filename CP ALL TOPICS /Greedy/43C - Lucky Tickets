void solve(){
    int n;cin>>n;vector<ll>a(n);for(auto &x:a)cin>>x;
    int t=0,d1=0,d2=0;
    for(auto x:a){
        ll tm=x%3;
        if(tm==0)t++;
        else if(tm==1)d1++;
        else if(tm==2)d2++;
    }
    cout<<t/2 + min(d1,d2);
}
