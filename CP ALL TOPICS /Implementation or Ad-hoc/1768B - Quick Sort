#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
// const int INF=500;
const ll INF = 2e5+5;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
int n,k;cin>>n>>k;vector<int>v(n);
for(auto &x:v)cin>>x;
int cr=0,cnt=0;
for(auto x:v){
    if(x==cr+1){cnt++;cr=x;}
}
int rm=n-cnt;
cout<<(rm+k-1)/k<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
    }    
return 0;
}
