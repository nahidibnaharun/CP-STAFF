void solve() {
   
  int n,k; string s; cin >> n>>k>>s;
  int a= count(s.begin() ,s.end() ,'0') , b= count(s.begin() , s.end() ,'1') , c = count(s.begin() , s.end() ,'2');
  string ans(n,'+');
  
  for(int i=0 ;i<n ;i++){
      if( i<a+ c || i>=n-b-c ) ans[i] ='?';
      if(i<a || i>=n-b || k==n)ans[i]='-';
  }
  cout<<ans;
  
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
   int t;
   cin >>t;
   while(t--){
    solve();
    cout<<endl;
   }
return 0;
}
