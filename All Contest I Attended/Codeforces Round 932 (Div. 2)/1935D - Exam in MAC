#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
const int INF=1000000000;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
int n,c;cin>>n>>c;vector<int>s(n);
for(int i=0;i<n;i++)cin>>s[i];
int od=0,ev=0;
ll ans=1ll*(c+1)*(c+2)/2;
for(int i=0;i<n;i++){
    ans-=s[i]/2+1;ans-=c-s[i]+1;
    if(s[i]%2==0)ev++;
    else od++;
}
ans+=1ll*ev*(ev+1)/2;
ans+=1ll*od*(od+1)/2;
cout<<ans<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
    solve();
    // cout<<endl;
    }
}
