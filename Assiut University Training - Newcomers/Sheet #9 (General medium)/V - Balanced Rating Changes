void solve() {
    int n;
    cin >> n;
    int po = 0 , no = 0;
    vector< int > v(n);
    for( auto &x : v){
        cin >> x;
        if( x % 2 !=0 ){
            if(x>0)po++;
            else if( x<0 )no++;
        }
    }
    if( po > no ){
        po = po - no;
        po = po / 2;
        for(auto &x : v){
            if( x%2 !=0 && x > 0 && po > 0){
                cout << x/2 + 1;
                po--;
            }
            else cout << x/2 ; 
            cout <<endl;
        }
    }
    else if ( no > po ){
        no -= po;
        no /= 2;
        for(auto &x : v){
            if(x%2 !=0 && x<0 && no > 0){
                cout << x/2 -1;
                no--;
            }
            else cout << x/2;
            cout << endl;
        }
    }
    else{
        for(auto &x : v){
            cout << x/2<<endl;
        }
    }
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // ll t;cin>>t;
