
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 1e5 + 7;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{

    int n;
    cin >> n;

    string s = "qkj";

    vector<vector<int>> p(3, vector<int>(n + 1));
    for (int i = 0; i < 3; i++)
        for (int j = 1; j <= n; j++)
            cin >> p[i][j];

    vector<pair<char, int>> sol(n + 1, {'\0', -1});
    array<int, 3> mins = {n, n, n};

    for (int i = n - 1; i >= 1; i--)
    {
        int win = -1;

        for (int j = 0; j < 3; j++)
        {
            if (p[j][i] > p[j][mins[j]])
                win = j;
        }

        if (win == -1)
            continue;

        sol[i] = {s[win], mins[win]};

        for (int j = 0; j < 3; j++)
        {
            if (p[j][i] < p[j][mins[j]])
                mins[j] = i;
        }
    }

    if (sol[1].second == -1)
    {
        cout << "NO" << endl;
        return;
    }

    cout << "YES" << endl;

    vector<pair<char, int>> ans;
    ans.push_back(sol[1]);

    while (ans.back().second >= 0)
    {
        ans.push_back(sol[ans.back().second]);
    }

    ans.pop_back();

    cout << ans.size() << endl;
    for (auto &x : ans)
    {
        cout << x.first << " " << x.second << endl;
    }
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }
    return 0;
}
