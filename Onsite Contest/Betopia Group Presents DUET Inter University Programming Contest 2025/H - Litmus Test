void solve(){
int n;string s;cin>>n>>s;
int a=0,b=0,c=0;
for(char c:s){
    if(c=='A')a++;
    else if(c=='B')b++;
    else c++;
}
int ans;
if(a>0 && b>0)cout<<1;
else if(a>0)cout<<a;
else if(b>0)cout<<b;
else cout<<2;
cout<<endl;
}
int main(){
