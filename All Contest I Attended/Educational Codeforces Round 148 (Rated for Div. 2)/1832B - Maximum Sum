#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1000000007;
/*
//     
         _   _  __    _   _  _____   _____
//     / | / / / _ \ \ \__\ \\__  _\\  _   \ 
//    /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \ 
//   / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
//  /_/ |_/ /_/     \__\\_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve() {
    int n,k; cin >>n>>k;
    vector<int>a(n); for(auto &x:a)cin >>x;
    sort(a.begin(),a.end());
    vector<ll>pr(n+1,0);
    for( int i=0;i<n;i++) pr[i+1] = pr[i]+a[i];

    ll ans=0;
    for(int i=0;i<=k;i++)ans =max(ans,pr[n-(k-i)] -pr[2*i]);
    cout<<ans;
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
   int t;
   cin >>t;
   while(t--){
    solve();
    cout<<endl;
   }
return 0;
}
