void solve()
{
    int n;
    cin >> n;
    vector<int> ab(n);
    for (auto &it : ab)
        cin >> it;
    if (count(ab.begin(), ab.end(), 0) == 0)
    {
        cout << 1 << endl;
        cout << 1 << " " << n << endl;
    }
    else if (ab[0] == 0 && ab[n - 1] == 0)
    {
        cout << 3 << endl;
        cout << 1 << " " << n - 2 << endl;
        cout << 2 << " " << 3 << endl;
        cout << 1 << " " << 2 << endl;
    }
    else if (ab[0] == 0)
    {
        cout << 2 << endl;
        cout << 1 << " " << n - 1 << endl;
        cout << 1 << " " << 2 << endl;
    }
    else if (ab[n - 1] == 0)
    {
        cout << 2 << endl;
        cout << 2 << " " << n << endl;
        cout << 1 << " " << 2 << endl;
    }
    else
    {
        cout << 2 << endl;
        cout << 1 << " " << n - 1 << endl;
        cout << 1 << " " << 2 << endl;
    }
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    // t = 1;
    while (t--)
    {
        solve();
        // cout << endl;
    }
    return 0;
}
