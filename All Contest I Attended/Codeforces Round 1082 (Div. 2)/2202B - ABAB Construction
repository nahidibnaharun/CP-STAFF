#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 10000;
const ll MAXN = 2e5 + 5;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{
    int n;
    cin >> n;

    string s;
    cin >> s;

    bool ans = true;

    if (n & 1)
    {
        if (s[0] == 'b')
            ans = false;

        for (int i = 1; i < n - 1; i += 2)
        {
            if (s[i] != '?' && s[i + 1] != '?' && s[i] == s[i + 1])
                ans = false;
        }
    }
    else
    {
        for (int i = 0; i < n; i += 2)
        {
            if (s[i] != '?' && s[i + 1] != '?' && s[i] == s[i + 1])
                ans = false;
        }
    }

    cout << (ans ? "YES" : "NO") << "\n";
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }

    return 0;
}
