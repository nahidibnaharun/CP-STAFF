LANG: C++
TASK: practice
*/


void solve(){
ll n,k,s; cin >> n>> k>>s;
ll l=n-k;
ll ans1= k*(k+1)/2 ,ans2= n*(n+1)/2 - (l*(l+1))/2;



if (s >= ans1 && s <= ans2) cout<<"YES";
else cout<<"NO";
}

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

  ll Test_Case; cin >> Test_Case;
  while (Test_Case--) {
  solve();
  cout<<endl;
  }

  return 0;
}
