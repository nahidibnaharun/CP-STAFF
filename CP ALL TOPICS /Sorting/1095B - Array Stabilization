void solve(){
int n;cin>>n;
vector<int>ar(n);
for(auto &x:ar)cin>>x;
sort(ar.begin(),ar.end());
if(n==1)cout<<0;
else
cout<<min(ar[n-1]-ar[1],ar[n-2]-ar[0]);
}
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL); 
    // int t;
    // cin>>t;
    // while(t--)
    solve();
    return 0;   
}
