 void solve(){
ll v[3],n;
for(auto &x:v)cin>>x;
   cin>>n;
sort(v,v+3);
n-=2*v[2]-v[1]-v[0];
if(n<0 || n%3!=0)cout<<"NO";
else cout<<"YES";

cout<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();

       
}
