int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL); 
    int t;
    cin>>t;
    while(t--){
        int n;cin>>n;int s=0;
        for(int i=0;i<n;i++){
            int te;cin>>te;s+=te;
        }
        cout<<s-n<<endl;
    }
    return 0;   
}
