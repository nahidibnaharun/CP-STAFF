void solve(){
    int n,m;cin>>n>>m;
    if(n==m)cout<<"YES";
    else if(n>m){if((n-m)%2)cout<<"NO";else cout<<"YES";}
    else cout<<"NO";
    cout<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
  int t;cin>>t;
  while(t--)
    solve();
} 
