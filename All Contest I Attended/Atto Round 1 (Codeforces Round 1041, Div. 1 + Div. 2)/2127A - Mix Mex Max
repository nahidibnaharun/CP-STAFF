void solve(){
 int n;cin>>n;set<int>a;
 for(int i=0,b;i<n;i++){
    cin>>b;
    if(b!=-1)a.insert(b);
 }
 bool chk;
 if(a.size()>=2)chk=false;
 else if(a.empty())chk=true;
 else{
    int x=*a.begin();
    chk=(x>=1);
 } 
 if(chk)cout<<"YES";
 else cout<<"NO";
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
    solve();
    cout<<endl;
    }
}
