void solve() { 
    string s;
    cin >> s;
    int n= s.size();

    for(int i=0;i<n;i++){
        if(i==0 && s[i]=='9'){
            continue;
        }
        else{
        int x = s[i]-'0';
        if(x > 9 - x ) 
        s[i] = (char) ((9-x)+'0');
        }
    }cout<<s;
    


}

