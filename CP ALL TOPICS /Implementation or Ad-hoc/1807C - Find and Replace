void solve(){
    int n;cin>>n;string s;cin>>s;
    int mp[26];
    for(int i=0;i<26;i++)mp[i]=-1;
    for(int i=0;i<n;i++){
        int cr=(s[i]-'a');
        if(mp[cr]==-1)mp[cr]=(i%2);
        else if(mp[cr]!=(i%2)){cout<<"NO"<<endl;return;}
    }
    cout<<"YES";
cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
  int t;cin>>t;
  while(t--)
    solve();
} 
