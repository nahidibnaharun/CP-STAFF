void solve()
{
    ll s, k, m;
    cin >> s >> k >> m;
    ll f = m / k, r;
    if (s <= k || f == 0)
        r = s;
    else
        r = (f % 2 ? k : s);
    ll dlta = m - f * k, ans = (r - dlta);
    if (ans < 0)
        ans = 0;
    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    // t = 1;
    while (t--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
