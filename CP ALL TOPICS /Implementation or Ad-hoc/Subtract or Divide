void solve(){
    ll n,ans;cin>>n;
    if(n%2==1)ans=(n+1)/2;
    else ans=n-(n/4);
    cout<<ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }    
return 0;
}
