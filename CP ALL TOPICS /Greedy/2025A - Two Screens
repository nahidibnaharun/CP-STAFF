void solve(){
string s,t;cin>>s>>t;
int n=s.size(),m=t.size(),l=0;
for(int i=1;i<=min(n,m);i++){
    if(s.substr(0,i)==t.substr(0,i))l=i;
}
cout<<n+m-max(l,1)+1;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
