void solve()
{
    int n;
    string s;
    cin >> n >> s;
    vector<int> id;
    for (int i = 0; i < n; ++i)
        if (s[i] == '2')
            id.push_back(i);
    int k = id.size();
    if (k == 1 || k == 2)
    {
        cout << "NO\n";
        return;
    }
    vector<string> t(n, string(n, '='));
    for (int i = 0; i < n; ++i)
        t[i][i] = 'X';
    for (int i = 0; i < k; ++i)
    {
        int x = id[i], y = id[(i + 1) % k];
        t[x][y] = '+';
        t[y][x] = '-';
    }
    cout << "YES\n";
    for (int i = 0; i < n; ++i)
        cout << t[i] << '\n';
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
    // freopen("balancing.in", "r", stdin);
    // freopen("balancing.out", "w", stdout);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        // cout << endl;
    }

    return 0;
}
