#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e17;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
  int n,q;cin>>n>>q;
  ll sum=0,ce=0,co=0;
  for(int i=0;i<n;++i){
    ll x;cin>>x;sum+=x;
    if(x%2==0)ce++;
    else co++;
  }
while(q--){
    int t; ll x;cin>>t>>x;
    if(t==0){
        sum+=x*ce;
        if(x%2!=0){co+=ce;ce=0;}
    }
    else{
        sum+=x*co;
        if(x%2!=0){
            ce+=co;co=0;
        }
    }cout<<sum<<endl;
}

 }

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        // cout<<endl;
    }
return 0;
}
