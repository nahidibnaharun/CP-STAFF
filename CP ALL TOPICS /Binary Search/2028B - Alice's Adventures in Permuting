
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 1e5 + 7;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{
    ll n, b, c;
    cin >> n >> b >> c;

    if (b == 0)
    {
        if (c >= n)
        {
            cout << n << endl;
        }
        else if (c >= n - 2)
        {
            cout << n - 1 << endl;
        }
        else
        {
            cout << -1 << endl;
        }
    }
    else
    {
        if (c >= n)
        {
            cout << n << endl;
        }
        else
        {
            ll bad = max(0LL, 1 + (n - c - 1) / b);
            cout << n - bad << endl;
        }
    }
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }
    return 0;
}
