void solve(){
int n;cin>>n;
string m="zzz",cr;
for(int i=0;i<26;i++){
  for(int j=0;j<26;j++){
    for(int k=0;k<26;k++){
      if(i+j+k+3==n){
        cr+=char(i+'a');
        cr+=char(j+'a');
        cr+=char(k+'a');
        m=min(cr,m);
      }
    }
  }
}
cout<<m;

  cout<<endl;
}
