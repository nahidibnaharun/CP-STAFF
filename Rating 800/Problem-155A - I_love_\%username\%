void solve() {
 int n,a=0;
 cin>>n;
 int mx,mn;
 cin>>mx;
 mn=mx;
 for(int i=1;i<n;i++){
   int t;cin>>t;
   if(t>mx){
     mx=t;
     a++;
   }
   if(t<mn){
     mn=t;
     a++;

   }
 }
 cout<<a;
return;
}

