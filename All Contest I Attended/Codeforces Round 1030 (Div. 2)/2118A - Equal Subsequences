void solve(){
    int n,o;cin>>n>>o;
    int k=n-o;
    while(k--)cout<<0;
    while(o--)cout<<1;
cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
  int t;cin>>t;
  while(t--)
    solve();
} 
