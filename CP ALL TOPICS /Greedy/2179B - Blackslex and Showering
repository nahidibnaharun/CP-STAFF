#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const ll INF = 1e9 + 7;
const int SIZE = 1e5;
const int MOD = 998244353;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{
	int n;
	cin >> n;
	vector<ll> a(n);
	for (auto &x : a)
		cin >> x;
	ll sum = 0;
	for (int i = 0; i < n - 1; i++)
		sum += (abs(a[i] - a[i + 1]));
	ll gain = abs(a[0] - a[1]);
	gain = max(gain, abs(a[n - 2] - a[n - 1]));

	for (int i = 1; i < n - 1; i++)
	{
		ll temp = abs(a[i - 1] - a[i]) + abs(a[i] - a[i + 1]) - abs(a[i - 1] - a[i + 1]);
		gain = max(gain, temp);
	}
	cout << sum - gain;
}

int main()
{
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);

	ll Test_Case;
	cin >> Test_Case;
	while (Test_Case--)
	{
		solve();
		cout << endl;
	}

	return 0;
}
