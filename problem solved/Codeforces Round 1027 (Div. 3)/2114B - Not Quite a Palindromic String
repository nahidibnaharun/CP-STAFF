#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
const ll M=1e9+1;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
int n,k;string s;cin>>n>>k>>s;
int cnt=0;for(char x:s)if(x=='0')cnt++;
if(k>=abs(cnt-n/2) && k<=n/2 && ((cnt-n/2+k)%2==0))cout<<"YES";
else cout<<"NO";

cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL); 
  int t;cin>>t;
  while(t--)
    solve();
} 
  
