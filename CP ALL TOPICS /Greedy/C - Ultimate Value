#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF=(1LL<<62);
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
    int n;cin>>n;
    vector<ll>a(n+1);
    for(int i=1;i<=n;i++)cin>>a[i];
    ll mlo=INF,mle=-INF,lv=0;
    for(int i=1;i<=n;i++){
        if(i%2==1)lv+=a[i];
        else lv-=a[i];
    }
    ll ans=lv;
    int fo=-1,lo=-1,fe=-1,le=-1;
    for(int i=1;i<=n;i++){
        if(i%2==1){
            if(fo==-1)fo=i;
            lo=i;
        }
        else{
            if(fe==-1)fe=i;
            le=i;
        }
    }
    if(fo!=-1 && lo!=fo)ans=max(ans,lv+(ll)(lo-fo));
    if(fe!=-1 && le!=fe)ans=max(ans,lv+(ll)(le-fe));
    for(int j=1;j<=n;j++){
        if(j%2==0){
            if(mlo!=INF){
                ll cr=2*a[j]+j;
                ans=max(ans,lv+cr-mlo);
            }
        }
        else{
            if(mle!=-INF){
                ll cr=2*a[j]-j;
                ans=max(ans,lv+mle-cr);
            }
        }
        if(j%2==1){
            ll tm=2*a[j]+j;
            if(tm<mlo)mlo=tm;
        }
        else{
            ll tm=2*a[j]-j;
            if(tm>mle)mle=tm;
        }
    }
    cout<<ans;

}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
