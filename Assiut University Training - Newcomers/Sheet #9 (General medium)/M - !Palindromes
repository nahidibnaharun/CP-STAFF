void solve(){

    string s;
    cin >> s;
    int n = s.size();

    bool is_palindrome = true;
    for(int i = 0; i < n / 2; ++i) {
        if(s[i] != s[n - 1 - i]) {
            is_palindrome = false;
            break;
        }
    }

    if(!is_palindrome) {
        cout << n << '\n';
        return;
    }

    bool all_same = true;
    for(int i = 1; i < n; ++i) {
        if(s[i] != s[0]) {
            all_same = false;
            break;
        }
    }

    if(all_same) {
        cout << 0 << '\n';
    } else {
        cout << n - 1 << '\n';
    }
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
