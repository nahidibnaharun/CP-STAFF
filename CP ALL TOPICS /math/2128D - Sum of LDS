void solve(){
int n;cin>>n;vector<int>v(n);
for(auto &x:v)cin>>x;
int sm=(n*(n+1)*(n+2))/6;
for(int i=0;i+1<n;++i){
    if(v[i]<v[i+1])sm-=(i+1)*(n-i-1);
}cout<<sm;
} 
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
  int t;cin>>t;
  while(t--){
    solve();
    cout<<endl;
  }
}
