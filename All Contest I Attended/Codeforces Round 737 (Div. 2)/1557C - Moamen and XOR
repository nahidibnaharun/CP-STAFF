#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int MOD = (int)(1e9) + 7;
const int MAX = 1e7 + 5;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

ll bigmod(ll a, ll b, ll mod = MOD) {
    ll res = 1;
    a %= mod;
    while (b > 0) {
        if (b & 1) res = (res * a) % mod;
        a = (a * a) % mod;
        b >>= 1;
    }
    return res;
}

void solve() {
    int n, k;
    cin >> n >> k;
    if (k == 0) {
        cout << 1;
        return;
    }
    ll cur = 1, ans = 0;
    for (int i = 1; i <= k; i++) {
        if (!(n & 1)) {
            ll x = (ll)(k - i) * n;
            ll p = bigmod(2, x);
            p = (p * cur) % MOD;
            ans = (ans + p) % MOD;
        }
        if (n & 1) {
            ll cnt = bigmod(2, n - 1);
            cnt = (cnt + 1) % MOD;
            cur = (cur * cnt) % MOD;
        } else {
            ll cnt = bigmod(2, n - 1);
            cnt = (cnt - 1 + MOD) % MOD;
            cur = (cur * cnt) % MOD;
        }
    }
    ans = (ans + cur) % MOD;
    cout << ans;
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}   
