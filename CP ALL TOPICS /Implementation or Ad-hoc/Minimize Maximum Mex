#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
// const int INF=500;
const ll INF = 1000000007;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve() {
    int n;cin>>n;vector<int>a(n),b(n);for(auto &x:a)cin>>x;for(int &x:b)cin>>x;
    vector<char>sn(n+2,0);
    for(int i=0;i<n;i++){
        if(a[i]<=n)sn[a[i]]=1;
        if(b[i]<=n)sn[b[i]]=1;
    }
    int gm=0;
    while(sn[gm])gm++;
    vector<char>sp(n+2,0);
    for(int i=0;i<n;i++){
        if(a[i]==b[i]&& a[i]<=n)sp[a[i]]=1;
    }
    int cnt=0,ss=INF;
    for(int i=0;i<=n+1;i++){
        if(!sp[i]){
            cnt++;
            if(cnt==2){ss=i;break;}
        }
    }
    cout<<min(gm,ss);
}
   
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
    solve();
    cout<<endl;
    }
}
