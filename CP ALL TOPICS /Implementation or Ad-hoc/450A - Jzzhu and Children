void solve(){
int n,m;cin>>n>>m;
vector<int>a(n);
int mx=0,id=0;
for(int i=0;i<n;++i){
    cin>>a[i];
    int sm=(a[i]+m-1)/m;
    if(sm>=mx){
        mx=sm;id=i+1;
    }
}cout<<id;

}

