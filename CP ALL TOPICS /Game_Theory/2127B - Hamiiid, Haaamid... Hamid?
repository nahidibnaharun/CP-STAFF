#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
// const int INF=500;
const ll INF = 1e9;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
int n,x;string s;cin>>n>>x>>s;
if(x==1 || x==n){cout<<1<<endl;return;}
x--;
int lf=-INF,rg=INF;
for(int i=x-1;i>=0;i--)
if(s[i]=='#'){lf=i;break;}

for(int i=x+1;i<n;i++)
    if(s[i]=='#'){rg=i;break;}

    if(lf==-INF && rg==INF){cout<<1<<endl;return;}
cout<<max(min(x+1,n-rg+1),min(lf+2,n-x))<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
    }    
return 0;
}
