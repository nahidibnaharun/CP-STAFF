void solve(){
int n;
    cin >> n;
    vector<ll> lis(n);
    for (int i = 0; i < n; i++) cin >> lis[i];

    sort(lis.begin(), lis.end());

    ll ans = -1;
    long double base = pow((long double)lis.back(), 1.0L / (n - 1));
    ll i = max(1LL, (ll)base);
    long double inf = 1e18;

    for (ll j = i; j <= i + 2; j++) {
        long double sum = 0;
        long double p = 1;
        for (int k = 0; k < n; k++) {
            sum += fabsl(lis[k] - p);
            p *= j;
            if (p > inf) {
                sum = inf + 10;
                break;
            }
        }
        if (ans == -1) ans = (ll)sum;
        else ans = min(ans, (ll)sum);
    }

    cout << ans;
}

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

//   ll Test_Case; cin >> Test_Case;
