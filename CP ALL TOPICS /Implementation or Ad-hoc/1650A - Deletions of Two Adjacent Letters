void solve(){
    string s;cin>>s;
    size_t n=s.length();
    char x;cin>>x;
    if(s[n/2]==x)cout<<"YES";
    else cout<<"NO";

    cout<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
  int t;cin>>t;
  while(t--)
    solve();
} 
