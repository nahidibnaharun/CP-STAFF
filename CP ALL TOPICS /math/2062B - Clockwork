 void solve(){
int n;cin>>n;
bool f=0;
for(int i=0;i<n;i++){
    int x;cin>>x;
    if(x<=i*2 || x<=(n-i-1)*2)f=1;
}
cout<<((f)?"NO":"YES");
    cout<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
}
