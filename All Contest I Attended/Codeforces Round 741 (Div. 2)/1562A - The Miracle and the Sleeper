int l, r;

void solve()
{
    if (r < l * 2)
        cout << r - l;
    else
        cout << (r - 1) / 2;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        cin >> l >> r;
        solve();
        cout << '\n';
    }

    return 0;
}
