LANG: C++ 
TASK: practice
*/


void solve(){
    int n, ra,ca,rb,cb;
    cin >> n >> ra >> ca >> rb >> cb;
    int ans=0;
    if(rb > ra)ans= max(ans,rb);
    else if(rb < ra) ans= max(ans,n-rb);
    if(cb > ca) ans=max(ans,cb);
    else if(cb<ca)ans=max(ans,n-cb);
    cout<<ans;
}



int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int Test_Case;
    cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout<<endl;
    }
    return 0;
}
