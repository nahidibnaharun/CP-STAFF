#include <algorithm>
#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
const ll M=1e9+1;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
string s;cin>>s;
int ans=0,n=s.size();
bool chk=false;
for(int i=0;i<n;i++){
  if(s[i]=='(')ans++;
  else ans--;
  if(ans==0 && i<n-1){chk=true;break;}
}
cout<<((chk)?"YES":"NO");
cout<<endl;
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
  int t;cin>>t;
  while(t--)
    solve();
} 
  
