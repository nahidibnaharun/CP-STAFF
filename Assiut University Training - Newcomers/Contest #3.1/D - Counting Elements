void solve(){
int n;
    cin >> n;
    vector<int> a(n);
    unordered_set<int> s;
    for (int i = 0; i < n; ++i) {
        cin >> a[i];
        s.insert(a[i]);
    }
    int count = 0;
    for (int i = 0; i < n; ++i) {
        if (s.count(a[i] + 1)) {
            count++;
        }
    }
    cout << count << endl;

}
    
int main(){
    ios_base::sync_with_stdio(false);
