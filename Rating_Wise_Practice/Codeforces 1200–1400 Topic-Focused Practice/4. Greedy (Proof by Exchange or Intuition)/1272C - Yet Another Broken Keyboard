void solve() {
    int n,k;cin >>n>>k;
    vector<bool>a(26,false);
    string s;
    cin >>s;
    for(int i=0;i<k;i++){
        char x; cin >>x;
        a[x-'a']=true;
    }
    ll ans=0;
    ll i,j;
    for(i=0,j=0;j<n;j++){
       if(a[s[j]-'a']==false){
          ans += ((j-i)*(j-i+1))/2;
          i=j+1;
       }
    }
    
ans +=((j-i)*(j-i+1))/2;
cout<<ans;
}

