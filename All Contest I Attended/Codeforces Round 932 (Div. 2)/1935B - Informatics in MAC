#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
const int INF=1000000000;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
int n;cin>>n;vector<int>a(n),cnt1(n+1),cnt2(n+1);
for(int i=0;i<n;i++){cin>>a[i];cnt2[a[i]]++;}
int mx1=0,mx2=0;
while(cnt2[mx2])++mx2;
for(int i=0;i<n;i++){
    cnt1[a[i]]++;
    if(--cnt2[a[i]]==0 && mx2>a[i])mx2=a[i];
    while(mx2 && !cnt2[mx2-1])--mx2;
    while(cnt1[mx1])++mx1;
    if(mx1==mx2){
        cout<<2<<endl<<1<<" "<<i+1<<endl<<i+2<<" "<<n<<endl;
        return;
    }
}cout<<-1<<endl;
}
 
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
    solve();
    // cout<<endl;
    }
}
