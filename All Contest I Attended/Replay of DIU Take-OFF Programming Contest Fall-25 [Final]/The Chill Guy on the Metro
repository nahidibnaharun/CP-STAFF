void solve()
{

    ll x1, y1, x2, y2, x3, y3, x4, y4;
    cin >> x1 >> y1 >> x2 >> y2 >> x3 >> y3 >> x4 >> y4;
    ll area = (x2 - x1) * (y2 - y1);

    ll left = max(x1, x3), right = min(x2, x4), bottom = max(y1, y3), top = min(y2, y4);

    ll width = max(0LL, right - left), height = max(0LL, top - bottom);

    ll totalarea = width * height;
    cout << area - totalarea;
}

