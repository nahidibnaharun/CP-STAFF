int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	int t;
	cin>>t;
	while(t--){
		string s,a="ADVITIYA";
		cin>>s;
		int ans=0;
		for(int i=0;i<8;i++){
		    int d=abs(a[i]-s[i]+26)%26;
		    ans+=d;
		}
		
		cout<<ans<<endl;
	}

}
