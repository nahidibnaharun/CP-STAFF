int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int a, b, c;
    cin >> a >> b >> c;
    int width = 2 * a;
    // int eve = c / 2;
    if (c > 1)
    {

        width += 2 * (b + 1) + 1;
        // width += 2 * c;
        c -= 2;
    }
    width += (c / 2) * 3;
    cout << width << endl;

    return 0;
}
