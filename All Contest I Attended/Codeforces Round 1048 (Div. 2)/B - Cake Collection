#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e12+7;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
ll n;ll m;cin>>n>>m;
ll mi=min(n,m),ans=0;
vector<ll>a(n);for(auto &x:a)cin>>x;
sort(a.rbegin(),a.rend());
vector<ll>pf(n+1,0);
for(int i=1;i<=n;i++)pf[i]=pf[i-1]+a[i-1];
for(int i=1;i<=mi;i++)ans+=pf[i];
if(m>n)ans+=(m-n)*pf[n];
cout<<ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
