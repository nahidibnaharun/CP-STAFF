void solve() {
 int n;
 cin>>n;
 int police =0,ans=0;
 for(int i=0;i<n;i++){
   int t;cin>>t;
   if(t>0){
     if(t<11)
     police+=t;
   
   }
   else if(police!=0 && t<0){
     police+=t;
   }
   else{
     ans++;
   }
 }cout<<ans;
return;
}

