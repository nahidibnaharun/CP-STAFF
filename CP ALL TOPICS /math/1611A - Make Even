void solve(){
    string s;cin>>s;
    if((s.back()-'0')%2==0){cout<<0<<endl;return;}
    if((s[0]-'0')%2==0){cout<<1<<endl;return;}
    if(count(s.begin(), s.end(), '2')>0 ||count(s.begin(), s.end(), '4')>0 || count(s.begin(), s.end(), '6')>0 ||count(s.begin(), s.end(), '8')>0  ){
        cout<<2<<endl;return;
    }
    cout<<-1;

cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
}
