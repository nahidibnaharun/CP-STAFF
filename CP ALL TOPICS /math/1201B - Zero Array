#include<bits/stdc++.h>
#include <cstdint>
using namespace std;
using lli = long long int;
using ll = long long;
using ull = unsigned long long;
const ll MOD = 998244353;

/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
int n;cin>>n;
lli s=0,mn=INT_MIN;
for(int i=0;i<n;i++){
    lli x;cin>>x;s+=x;
    mn=max(mn,x);
}
if((s&1)==0 && mn<=s/2)cout<<"YES";
else cout<<"NO";
cout<<endl;

} 
 
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
//   int t;cin>>t;
//   while(t--)
    solve();
}
