string s="";
void f(int n,int sp,int st){
    if(n==0)return;
for(int i=1;i<=sp;i++)s+=' ';
for(int i=1;i<=st;i++)s+='*';

cout<<s<<endl;
s.clear();
f(n-1,sp+1,st-2);
    
}
void solve(){
int n;cin>>n;
f(n,0,n+n-1);
 }

