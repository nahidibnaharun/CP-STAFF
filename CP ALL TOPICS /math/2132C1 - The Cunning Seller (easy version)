#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e17;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
vector<ull> p3(25);
void cp3(){
p3[0]=1;
for(int i=1;i<(int)p3.size();++i)p3[i]=p3[i-1]*3ULL;
}

void solve(){
    ull n;cin>>n;
    ull ans=0,ps=0;
    while(n>0){
        int d=n%3;
        if(d){
            ull cp;
            if(ps==0)cp=3ULL;
            else cp=p3[ps+1]+(ull)ps*p3[ps-1];
            ans+=(ull)d*cp;
        }
        n/=3ULL;
        ++ps;
    }cout<<ans;
 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;cp3();
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
