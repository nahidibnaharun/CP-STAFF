void solve(){
int n;cin>>n;
vector<int>a(n);
for(auto &x:a)cin>>x;
int l=0,r=n-1;
for(int i=1;i<=n;i++){
    if(a[l]==i)l++;
    else if(a[r]==i)r--;
    else {cout<<"NO";return;}
}
cout<<"YES";
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
