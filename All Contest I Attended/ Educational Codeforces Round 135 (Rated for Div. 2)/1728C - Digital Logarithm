
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 300005;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{
    int n;
    cin >> n;

    vector<int> a(n), b(n);
    for (int &x : a)
        cin >> x;
    for (int &x : b)
        cin >> x;

    priority_queue<int> qa(a.begin(), a.end());
    priority_queue<int> qb(b.begin(), b.end());

    int ans = 0;

    while (!qa.empty())
    {
        if (qa.top() == qb.top())
        {
            qa.pop();
            qb.pop();
        }
        else
        {
            ans++;
            if (qa.top() > qb.top())
            {
                int x = qa.top();
                qa.pop();
                qa.push(to_string(x).size());
            }
            else
            {
                int x = qb.top();
                qb.pop();
                qb.push(to_string(x).size());
            }
        }
    }

    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
