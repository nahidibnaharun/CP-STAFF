void solve(){
int n;cin>>n;
vector<int>ar(n);for(auto &x:ar)cin>>x;
if(n%2!=0)cout<<-1;
else{
    int a=0,b=0;
    for(auto x:ar){
        if(x%2==0)a++;
        else b++;
    }
    if(a==b)cout<<0;
    else cout<<abs(a-b)/2;
}
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
