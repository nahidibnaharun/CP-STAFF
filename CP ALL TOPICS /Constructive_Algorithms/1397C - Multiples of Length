void solve(){
 int n;
    cin >> n;
    vector<ll> v(n);
    for (ll &a : v) cin >> a;

    if (n == 1) {
        for (int i = 0; i < 3; i++) {
            cout << "1 1"<<endl << -v[0] <<endl;
            v[0] = 0;
        }
        return;
    }

    cout << "1 1"<<endl << -v[0] <<endl;
    v[0] = 0;

    cout << "2 " << n <<endl;
    for (int i = 1; i < n; i++) {
        cout << 1LL * (v[i] % n) * (n - 1) << " ";
        v[i] += 1LL * (v[i] % n) * (n - 1);
    }
    cout <<endl;

    cout << "1 " << n <<endl;
    for (int i = 0; i < n; i++) {
        cout << -v[i] << " ";
    }
    cout <<endl;
}

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

