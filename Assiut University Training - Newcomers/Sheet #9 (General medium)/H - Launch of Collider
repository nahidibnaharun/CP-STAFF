void solve(){
    int n;
    cin >> n;
    string dir;
    cin >> dir;
    vector<ll> pos(n);
    for(int i = 0; i < n; i++){
        cin >> pos[i];
    }

    ll mt = -1;
    for(int i = 0; i < n - 1; i++){
        if(dir[i] == 'R' && dir[i+1] == 'L'){
            ll ct = (pos[i+1] - pos[i]) / 2;

            if(mt == -1 || ct < mt){
                mt = ct;
            }
        }
    }

    cout << mt;

}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
