#include <bits/stdc++.h>
#include <functional>

using namespace std;

using ll = long long;

/*
ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

int main() {
    ios::sync_with_stdio(false);
    cin.tie(0);
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        set<ll>sa,sb;
        vector<ll> a(n),b(n);
        for(int i=0;i<n;i++){
            cin>>a[i];
            sa.insert(a[i]);
            }
        
        for(int i=0;i<n;i++){
            cin>>b[i];
            sb.insert(b[i]);
            }
        cout<<((sa.size()+sb.size()>=4)?"Yes":"No")<<endl;

    }
   return 0;
    
}
