#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1e9 + 7;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{
    int n;
    ll p;
    cin >> n >> p;
    vector<int> a(n), b(n);
    for (auto &x : a)
        cin >> x;
    for (auto &x : b)
        cin >> x;

    vector<pair<int, int>> v(n);
    for (int i = 0; i < n; i++)
        v[i] = {b[i], a[i]};

    sort(v.begin(), v.end());

    ll ans = p;
    int rem = n - 1;

    for (int i = 0; i < n; i++)
    {
        if (rem == 0)
            break;

        int cost = v[i].first;
        int capacity = v[i].second;

        if (cost >= p)
            break;

        int take = min(rem, capacity);
        ans += (ll)take * cost;
        rem -= take;
    }

    ans += (ll)rem * p;

    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
