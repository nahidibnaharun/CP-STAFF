void merge(int l, int mid, int h, vector<int> &a)
{
    vector<int> temp;

    int left = l, right = mid + 1;
    while (left <= mid && right <= h)
    {
        if (a[left] <= a[right])
        {
            temp.push_back(a[left]);
            left++;
        }
        else
        {
            temp.push_back(a[right]);
            right++;
        }
    }
    while (left <= mid)
    {
        temp.push_back(a[left]);
        left++;
    }
    while (right <= h)
    {
        temp.push_back(a[right]);
        right++;
    }
    for (int i = l; i <= h; i++)
    {
        a[i] = temp[i - l];
    }
    return;
}
void func(int l, int h, vector<int> &a)
{
    if (l >= h)
        return;
    int mid = l + (h - l) / 2;
    func(l, mid, a);
    func(mid + 1, h, a);
    merge(l, mid, h, a);
}
void solve()
{

    int n;
    cin >> n;

    int lO = 0, rO = 0;

    for (int i = 0; i < n; ++i)
    {
        int l, r;
        cin >> l >> r;
        lO += l;
        rO += r;
    }

    int lm = min(lO, n - lO);
    int rm = min(rO, n - rO);

    cout << lm + rm;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    // cin >> t;
    t = 1;
    while (t--)
    {
        solve();
        // cout << endl;
    }
    return 0;
}
