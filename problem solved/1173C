TASK: practice

*/



int main() {
 int n;
 cin>>n;
 int a[n+1],b[n+1],p[n+1];
 for(int i=1;i<=n;i++){
     cin>>a[i];
     p[a[i]]=0;
 }
 for(int i=1;i<=n;i++){
     cin>>b[i];
     p[b[i]]=i;
 }
if(p[1]){ //check for 1 in the pile or not 
int i;
  for( i=2; p[i]==p[i]+i-1; i++); //check for continuous 1 to n in the pile 

  if(p[i-1]==n){//check that the last number in the pile is in the last poistion or not
  int j; 
  for(j=i ; j<=n && p[j] <=j-i; j++);

  if(j>n){
    cout<<n-i+1;
    return 0;
  }
  }
}
int ans=0;
for(int i=1;i<=n;i++)ans=max(ans,p[i]-i+1+n);

cout<<ans;
  return 0;
}
