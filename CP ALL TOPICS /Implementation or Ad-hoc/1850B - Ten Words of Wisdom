 void solve(){
 int n;cin>>n;
 vector<pair<int,int>> ar(n);
 for(int i=0;i<n;i++){
    cin>>ar[i].first>>ar[i].second;
 }
 int ans,q=0;
 for(int i=0;i<n;i++){
    if(ar[i].first<11){
        if(ar[i].second>q){
            q=ar[i].second;
            ans=i+1;
        }
    }
 }
 cout<<ans;
    cout<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
}
