void solve(){
int n;cin>>n;
int ar[n];
map<int,int>hsh;
for(auto &x:ar){cin>>x;hsh[x]++;}
int ans=0;
for(auto x:hsh){
    if(x.second>1)ans+=(x.second-1);
}
if(ans%2)ans++;
cout<<n-ans;

    cout<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
  int t;cin>>t;
  while(t--)
    solve();
} 
