 void solve(){
    int n;cin>>n;
    vector<int>v(n);
    for(auto &x:v)cin>>x;
    int x=*min_element(v.begin(),v.end());
    int ans=0;
    for(auto s:v)ans+=(s-x);
        cout<<ans<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();

       
}
