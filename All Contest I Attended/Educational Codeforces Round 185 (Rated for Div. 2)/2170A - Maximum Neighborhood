
#include <bits/stdc++.h>

using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1e9 + 7;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{

    int n;
    cin >> n;
    ll best = 0;

    for (int r = 1; r <= n; r++)
    {
        for (int c = 1; c <= n; c++)
        {
            ll x = 1LL * (r - 1) * n + c;
            ll cost = x;
            if (r > 1)
                cost += (x - n);
            if (r < n)
                cost += (x + n);
            if (c > 1)
                cost += (x - 1);
            if (c < n)
                cost += (x + 1);
            best = max(best, cost);
        }
    }
    cout << best;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
