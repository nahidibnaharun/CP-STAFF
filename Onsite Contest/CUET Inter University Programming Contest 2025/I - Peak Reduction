#include<bits/stdc++.h>
#define endl '\n'

using namespace std;
using ll = long long int;

int main() {
	int tt; cin>> tt;
	while(tt--) {
		int n; cin>>n;
		vector<int>a(n);
		for(auto &x : a) cin >> x;

		if((a[0]==1 && a.back()==2) || (a[0]==2 && a.back()==1)) cout << "YES\n";
		else cout << "NO\n";
	}

	return 0;
}
