void solve(){
  int a,b,c;
  cin>>a>>b>>c;
  if(2*b>c)
  cout<<(a/2)*c+(a%2)*b<<endl;
  else cout<<a*b<<endl;

return ;
}

int main() {
  ios_base::sync_with_stdio(0);
	cin.tie(0); 
  cout.tie(0);

 int t;
 cin>>t;
 while(t--){
   solve();
   }


  return 0;
}
