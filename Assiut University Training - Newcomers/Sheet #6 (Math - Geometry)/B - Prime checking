bool isprime(ll x){
    if(x<2)return false;
    if(x==2)return true;
    if(x%2==0)return false;
    for(ll d=3;d*d<=x;d+=2)
        if(x%d==0)return false;
    
    return true;
}
void solve(){
    ll x;cin>>x;
    if(isprime(x))cout<<"YES";
    else cout<<"NO";

}


