#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1000000007;
/*
//     
         _   _  __    _   _  _____   _____
//     / | / / / _ \ \ \__\ \\__  _\\  _   \ 
//    /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \ 
//   / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
//  /_/ |_/ /_/     \__\\_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve() {
    int n; cin >>n;
    vector<ll>a(n);
    for(auto &x:a)cin >>x;
    int o=0;
    for(int i=1;i<n-1;i++){
       if(a[i]==1)o++;
    }
    if(n-2==o || (n==3 && a[1]%2!=0)){
        cout<<-1;return;
    }
    ll ans=0;
    for(int i=1;i<n-1;i++){
        if(a[i]%2==0){
            ans += a[i]/2;
        }
        else{
            ans += (a[i]+1)/2;
        }
    }
    cout<<ans;
    // cout<<endl;
   
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
  int t; cin >>t;
  while(t--){
    solve();
    cout<<endl;
  }
return 0;
}
