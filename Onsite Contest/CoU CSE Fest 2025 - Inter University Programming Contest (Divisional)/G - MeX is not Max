#include<bits/stdc++.h>
using namespace std;
using lli = long long int;
using ll = long long;
using ull = unsigned long long;
const ll MOD = 998244353;
const ll INF = 2000000007LL;

/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
  int n;cin>>n;
  vector<char>p(n+1,0);
  for(int i=0;i<n;i++){
    ll x;cin>>x;
    if(0<=x && x<=n)p[(int)x]=1;
  }
  int mx=0;
  while(mx<=n && p[mx])++mx;
  cout<<mx;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
  int t;cin>>t;
  while(t--){
  solve();
  cout<<endl;
  }
}
