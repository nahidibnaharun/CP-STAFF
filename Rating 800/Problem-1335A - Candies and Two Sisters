#include <bits/stdc++.h>

using namespace std;

using ll = long long;

/*

ID: mdnahidibnaharun

LANG: C++

TASK: practice

*/

void solve() {
unsigned long long n;
cin>>n;
if(n<=2) {
  cout<<0<<endl;
  return;
}
double l = (n*1.0)/2;

if(l!=n/2)cout<<n/2<<endl;
else cout<<n/2-1<<endl;
return;
}

int main() {
 int n;
 cin>>n;
 while(n--)
   solve();
 

  return 0;
}
