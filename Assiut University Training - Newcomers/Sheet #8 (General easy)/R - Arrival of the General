void solve(){
    int n;
  cin >> n;
 int a[n],ma=INT_MIN,mix=INT_MAX,mi,si;
 for(int i=0;i<n;i++){
     cin>>a[i];
     if(ma<a[i]){
         ma=a[i];
         mi=i;
     }
     if(mix>=a[i]){
         mix=a[i];
         si=i;
     }
 }
 int res = n-si-1+mi;
 if(si<mi) res--;
 cout<<res;

}
