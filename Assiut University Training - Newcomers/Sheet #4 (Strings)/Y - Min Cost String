#include<bits/stdc++.h>
#include <cctype>
#include <climits>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e17+7;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
    string s;cin>>s;
    int n=(int)s.size();
    vector<ll>v(26);
    for(auto &x:v)cin>>x;
    bool anyq=false;
    for(char c:s){
        if(c!='?'){anyq=true;break;}
    }
    if(!anyq){
        for(int i=0;i<n;i++)s[i]='a';
        cout<<0<<endl<<s<<endl;
        return;
    }
    int i=0;
    while(i<n){
        if(s[i]!='?'){i++;continue;}
        int l=i;
        while(i<n && s[i]=='?')i++;
        int r=i-1;
        bool hasL=(l-1>=0 && s[l-1]!='?');
        bool hasR=(r+1<n && s[r+1]!='?');

        if(hasL && hasR){
            int a=s[l-1]-'a';
            int b=s[r+1]-'a';
            ll low=min(v[a],v[b]);
            ll high = max(v[a],v[b]);
            char pick=0;
            for(char c='a'; c<='z' ;c++){
                int idx= c-'a';
                if(v[idx]>=low && v[idx]<=high){
                    pick =c;break;
                }
            }
            if(!pick)pick=s[l-1];
            for(int k=l;k<=r;k++)s[k]=pick;
        }
        else if(hasL){
            int a=s[l-1]-'a';
            ll bestd=LLONG_MAX;
            char pick = 'a';
            for(char c='a'; c<='z';++c){
                int idx= c-'a';
                ll d=llabs(v[idx]-v[a]);
                if(d<bestd || (d==bestd && c<pick)){
                    bestd=d;pick=c;
                }
            }
            for(int k=l;k<=r;k++)s[k]=pick;
        }
        else if(hasR){
            int b= s[r+1]-'a';
            ll bestd =LLONG_MAX;
            char pick = 'a';
            for(char c='a';c<='z';++c){
                int idx= c-'a';
                ll d= llabs(v[idx]-v[b]);
                if(d<bestd || (d==bestd && c<pick)){
                    bestd=d;pick=c;
                }
                for(int k=l;k<=r;k++)s[k]=pick;
            }
        }
        else{
            for(int k=l;k<=r;k++)s[k]='a';
        }
    }
    ll ans=0;
    for(int j=0;j+1<n;j++){
        int x=s[j]-'a',y=s[j+1]-'a';
        ans += llabs(v[x]-v[y]);
    }
    cout<<ans<<endl<<s<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
    // while(t--){
        solve();
    //     cout<<endl;
    // }
return 0;
}
