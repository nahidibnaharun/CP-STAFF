#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
string s;cin>>s;
int n=s.size();
vector<string>ans;
for(int i=n-1;i>-1;i--){
    if(s[i]!='0'){
        int l=n-i-1;
        string tm;
        tm+=s[i];
        while(l--){
            tm+='0';
        }
        ans.push_back(tm);
    }
}
cout<<ans.size()<<endl;
for(int i=ans.size()-1;i>-1;i--)cout<<ans[i]<<" ";
cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
    int t;cin>>t;
    while(t--){
solve();
    }
    
    return 0;   
}


