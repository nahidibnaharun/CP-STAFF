
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 200007;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

int p[MAX], a[MAX], pos[MAX];

void solve()
{
    int n, m, d;
    cin >> n >> m >> d;

    for (int i = 1; i <= n; i++)
    {
        cin >> p[i];
        pos[p[i]] = i;
    }

    for (int i = 1; i <= m; i++)
    {
        cin >> a[i];
    }

    int ans = INF;

    for (int i = 1; i < m; i++)
    {
        if (pos[a[i + 1]] <= pos[a[i]] || pos[a[i + 1]] - pos[a[i]] > d)
        {
            ans = 0;
            break;
        }

        ans = min(ans, pos[a[i + 1]] - pos[a[i]]);

        int dist = pos[a[i + 1]] - pos[a[i]];
        int swapNeed = d - dist + 1;
        int swapPossible = (pos[a[i]] - 1) + (n - pos[a[i + 1]]);

        if (swapPossible >= swapNeed)
            ans = min(ans, swapNeed);
    }

    cout << ans << endl;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        // cout << endl;
    }
    return 0;
}
