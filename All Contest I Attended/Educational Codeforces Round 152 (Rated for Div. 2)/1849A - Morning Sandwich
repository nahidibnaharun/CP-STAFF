void solve(){
   int a,b,c;cin>>a>>b>>c;
   int ans=0;
   if(b+c>=a)ans=(a*2)-1;
   else ans=(b+c)*2+1;
   cout<<ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
  int t;cin>>t;
  while(t--){
    solve();
    cout<<endl;
  }
} 
