#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const ll INF = 1e9 + 7;
const int SIZE = 200100;
const int MOD = 998244353;
const ll INFLL = (1LL << 60);
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

int n, m, k;
int a[SIZE], ans[SIZE];

void solve()
{
    cin >> n >> m >> k;

    set<pair<int, int>> q;

    for (int i = 1; i <= n; i++)
    {
        cin >> a[i];
        q.insert({a[i], i});
    }

    int cnt = 0;

    while (!q.empty())
    {
        cnt++;
        int pos = q.begin()->second;
        ans[pos] = cnt;
        q.erase(q.begin());

        while (true)
        {
            auto it = q.lower_bound({a[pos] + k + 1, 0});
            if (it == q.end())
                break;

            pos = it->second;
            ans[pos] = cnt;
            q.erase(it);
        }
    }

    cout << cnt << "\n";
    for (int i = 1; i <= n; i++)
        cout << ans[i] << " ";
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
    // freopen("balancing.in", "r", stdin);
    // freopen("balancing.out", "w", stdout);

    ll Test_Case = 1;
    // cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
