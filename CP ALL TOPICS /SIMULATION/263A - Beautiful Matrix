void solve(){
int ar[6][6],ini,inj;
for(int i=1;i<6;i++){
    for(int j=1;j<6;j++){
        cin>>ar[i][j];
        if(ar[i][j]==1){
            ini=i;inj=j;
        }
    }
}

cout<<abs(ini-3)+abs(inj-3);
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
   // int t;cin>>t;
   // while(t--)
    solve();
} 
