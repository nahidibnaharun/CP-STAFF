#include <bits/stdc++.h>

using namespace std;

int main()
{
  int a,laod,laev,o=0,e=0,i=1;
  cin>>a;
  while(a--){
      int t;
      cin>>t;
      if(t%2==0){
          e++;
          laev=i;
      }
      else{
          o++;
          laod=i;
      }
      i++;
  }
  if(o==1) cout<<laod;
  else cout<<laev;
    return 0;
}
