ll f(int n,int r){
    if(r<0 || r>n)return 0;
    if(r==0 || r==n)return 1;
    if(r>n/2)r=n-r;
    return (f(n-1,r-1)*n)/r;
}
void solve(){
int n,r;cin>>n>>r;
cout<<f(n,r);
 }

