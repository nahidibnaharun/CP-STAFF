int ar[4];
void solve(){
    ar[0]=INT_MAX;
    int n;
cin>>n;
int a[n+1];
for(int i=1;i<=n;i++) {cin>>a[i];
ar[a[i]]++;
}
int d=*min_element(ar,ar+4);
cout<<d<<endl;
int j=1;
d=d*3;
while(d--){
if(j==4) {j=1;
cout<<endl;}
for(int i=1;i<=n;i++){
    if(a[i]==j){ cout<<i<<" ";
    a[i]=0;
    break;
    }
}
j++;
}

}
