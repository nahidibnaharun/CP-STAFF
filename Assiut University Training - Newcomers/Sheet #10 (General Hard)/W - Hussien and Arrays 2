void solve(){

int n;
cin >> n;
vector<pair<ll,int>>v(n);
for(int i=0;i<n;i++){
    cin>>v[i].first;
    v[i].second=i;
}

sort(v.begin(),v.end());
int ans=0,mvi=v[0].second;

for(int i=1;i<n;i++){
    ans= max(ans,v[i].second-mvi);
    mvi=min(mvi,v[i].second);
}
cout<<ans;
}


    

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
//    ll t;cin>>t;
//    while(t--){
        solve();
//         cout<<endl;
//    }
return 0;
}
    
