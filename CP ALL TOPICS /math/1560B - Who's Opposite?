void solve(){
ll a,b,c;cin>>a>>b>>c;
if(max(a,b)>2*abs(a-b))cout<<-1;
else if(c>2*abs(a-b))cout<<-1;
else  cout<<((c+abs(a-b)>2*abs(a-b))?c-abs(a-b):c+abs(a-b));
    cout<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
  int t;cin>>t;
  while(t--)
    solve();
} 
