#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
const int INF=1000000000;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/
ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
    ll n,mx=LLONG_MIN;cin>>n;
    vector<tuple<ll,ll,ll,ll>>v;
    for(int i=0;i<n;i++){
        ll a,b;cin>>a>>b;v.emplace_back(b-a,a,b,i+1);
        mx=max({mx,a,b});
    }
    sort(v.rbegin(),v.rend());
    vector<ll>vp(mx+1),p;
    iota(vp.begin(),vp.end(),0);
    auto st=[&](ll x){
        vector<ll>p;
        while(vp[x]!=x)p.push_back(x),x=vp[x];
        for(auto &y:p)vp[y]=x;
        return x;
    };
    for(auto &x:v){
        auto [l,a,b,c]=x;
        ll xt=st(a),yt=st(b);
        if(xt!=yt){vp[yt]=xt;p.push_back(c);}
    }
sort(p.begin(),p.end());
ll np=p.size();
cout<<np<<endl;
for(auto &x:p)cout<<x<<" ";
cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
    solve();
    }
}
