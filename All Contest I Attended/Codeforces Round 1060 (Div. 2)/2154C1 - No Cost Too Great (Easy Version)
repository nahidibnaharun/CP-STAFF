
#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1e9+7;
/*

         _   _  __    _   _  _____   _____
    / | / / / _ \ \ \__\ \\__  _\\  _   \
   /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \
  / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
 /_/ |_/ /_/     \__\\_\  \_\\______\\___/
 
ID: mdnahidibnaharun
LANG: C++ 
TASK: Codeforces Round 1061 (Div. 2)
*/


const ll N=2e5+10;
vector<vector<ll>> pfac(N+1);

void solve(){
    ll n;cin>>n;
  vector<ll>a(n),b(n);

  for(auto &x:a)cin>>x;

  for(auto &x:b)cin>>x;

  ll ans=2;map<ll,ll>cnt;

  for(ll i=0;i<n;i++)
    for(ll x:pfac[a[i]])
      if(cnt[x]++)ans=0;

  for(ll i=0;i<n;i++){

    for(ll x:pfac[a[i]])cnt[x]--;

    for(ll x:pfac[a[i]+1])if(cnt[x])ans=min(ans,1LL);

    for(ll x:pfac[a[i]])cnt[x]++;
  }
  
  cout<<ans;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
  for(ll i=2;i<=N;i++)
    if(pfac[i].empty())
      for(ll j=i;j<=N;j+=i)
        pfac[j].push_back(i);


    ll Test_Case;
    cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout<<endl;
    }
    return 0;
}
