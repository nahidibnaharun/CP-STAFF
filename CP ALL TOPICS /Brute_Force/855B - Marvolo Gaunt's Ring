#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1006903069;
const int MAX = 1e7 + 10;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{
    int n;
    ll p, q, r;
    cin >> n >> p >> q >> r;

    vector<ll> a(n);
    for (int i = 0; i < n; i++)
        cin >> a[i];

    ll bestP = LLONG_MIN;
    ll bestPQ = LLONG_MIN;
    ll bestPQR = LLONG_MIN;

    for (int i = 0; i < n; i++)
    {
        bestP = max(bestP, p * a[i]);
        bestPQ = max(bestPQ, bestP + q * a[i]);
        bestPQR = max(bestPQR, bestPQ + r * a[i]);
    }

    cout << bestPQR;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    // cin >> t;
    t = 1;
    while (t--)
    {
        solve();
        // cout << endl;
    }

    return 0;
}
