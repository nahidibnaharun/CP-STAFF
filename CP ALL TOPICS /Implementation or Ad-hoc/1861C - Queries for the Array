
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 200007;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/
void solve()
{

    string s;
    cin >> s;

    int mx = 0, mn = 0, b = 0;
    bool ok = true;

    for (char c : s)
    {
        if (c == '+')
        {
            b++;
        }
        else if (c == '-')
        {
            b--;
            mx = min(mx, b);
            if (b < mn)
                mn = 0;
        }
        else if (c == '1')
        {
            mx = max(mx, b);
        }
        else
        {
            if (b <= 1)
            {
                ok = false;
                break;
            }
            if (mn == 0 || mn > b)
                mn = b;
        }

        if (mn <= mx && mn != 0)
        {
            ok = false;
            break;
        }
    }

    cout << (ok ? "YES" : "NO");
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
