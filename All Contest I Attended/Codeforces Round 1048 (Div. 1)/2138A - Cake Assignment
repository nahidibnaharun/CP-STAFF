
#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1e9+7;
/*

         _   _  __    _   _  _____   _____
    / | / / / _ \ \ \__\ \\__  _\\  _   \
   /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \
  / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
 /_/ |_/ /_/     \__\\_\  \_\\______\\___/
 
ID: mdnahidibnaharun
LANG: C++ 
TASK: Codeforces Round 1061 (Div. 2)
*/



void solve(){
    ll k, x, kk; cin >> k >> x; kk = 1LL<<k;
    if(!x || x == kk*2){
        cout<<-1;return;
    }

    ll y= kk*2-x;
    vector<int>ans;
    ans.clear();
    while(x!=kk){
        if(x>y)ans.push_back(2),x-=y,y*=2;
        else ans.push_back(1),y-=x,x*=2;
    }
    cout << ans.size() <<endl;
    while(!ans.empty()){
        cout<<ans.back()<<" ";
        ans.pop_back();
    }
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int Test_Case;
    cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout<<endl;
    }
    return 0;
}
