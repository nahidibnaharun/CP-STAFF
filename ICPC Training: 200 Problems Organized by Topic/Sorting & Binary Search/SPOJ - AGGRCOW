#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1006903069;
const int MAX = 1e7 + 10;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/
bool check(vector<int> &a, int n, int c, int mid)
{
    int cnt = 1;
    int first = a[0];
    for (int i = 1; i < n; i++)
    {
        if (a[i] - first >= mid)
        {
            cnt++;
            first = a[i];
            if (cnt == c)
            {
                return true;
            }
        }
    }
    return false;
}
void solve()
{

    int n, c;
    cin >> n >> c;
    vector<int> a(n);
    for (auto &x : a)
        cin >> x;
    sort(a.begin(), a.end());

    int left = a[1] - a[0], right = a[n - 1] - a[0];
    int ans = left;
    while (left <= right)
    {
        int mid = (left + right) / 2;
        if (check(a, n, c, mid))
        {
            left = mid + 1;
            ans = max(ans, mid);
        }
        else
        {
            right = mid - 1;
        }
    }
    cout << ans;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    // t=1;
    cin >> t;

    for (int i = 1; i <= t; i++)
    {
        solve();
        cout << endl;
    }

    return 0;
}
