
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 300005;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

int dp[MAX];
void solve()
{
    int n, k;
    cin >> n >> k;

    int used = 0;
    for (int i = 0; i < k; i++)
    {
        int r, c;
        cin >> r >> c;
        used += 2 - (r == c);
    }

    int m = n - used;

    dp[0] = dp[1] = 1;
    for (int i = 2; i <= m; i++)
    {
        dp[i] = (dp[i - 1] + 2LL * (i - 1) * dp[i - 2] % MOD) % MOD;
    }

    cout << dp[m];
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
