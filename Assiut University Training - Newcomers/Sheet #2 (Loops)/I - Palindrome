void solve(){
   string s;cin>>s;
   string r=s;
   int n=r.length();
   reverse(r.begin(),r.end());
   int z=0;
   for(auto x:s)if(x=='0')z++;
   if(z==n){
    cout<<'0'<<endl;
    cout<<"YES";
   }
   else{
    if(r[0]=='0'){
        int idx=0;
        while(r[idx]=='0' && idx<n)idx++;

        for(int i=idx;i<n;i++)cout<<r[i];
    }
   else cout<<r;
   cout<<endl;
    if(s==r)cout<<"YES";
    else cout<<"NO";
   }
}
