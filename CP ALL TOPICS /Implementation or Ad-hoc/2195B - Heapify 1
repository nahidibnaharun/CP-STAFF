void solve()
{
    int n;
    cin >> n;
    bool chk = true;
    for (int i = 1; i <= n; i++)
    {
        int x;
        cin >> x;
        int k = i;
        while (k % 2 == 0)
        {
            k /= 2;
        }
        int l = x;
        while (l % 2 == 0)
        {
            l /= 2;
        }
        if (k != l)
            chk = false;
    }
    if (chk)
        cout << "YES";
    else
        cout << "NO";
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
