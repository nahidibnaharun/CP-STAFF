void solve(){
    int n;cin>>n;
    ll ar[n];
    for(auto &x:ar)cin>>x;
    for(int i=0;i<n;i++){
        if(ar[i]>0)ar[i]=1;
        else if(ar[i]<0)ar[i]=2;
    }
    for(auto x:ar)cout<<x<<" ";
}
    
