#include <iostream>
#include <vector>
#include <cmath>

using namespace std;

typedef long long ll;

void solve() {
    ll L, v0, T, N;
    if (!(cin >> L >> v0 >> T >> N)) return;

    for (int i = 0; i < N; ++i) {
        ll ti, vi;
        cin >> ti >> vi;

        ll v_rel = abs(v0 - vi);
        
        ll time_left = T - ti;

        if (time_left < 0) {
            cout << 0;
        } else {
            ll additional_meetings = (time_left * v_rel) / L;
            cout << 1 + additional_meetings;
        }

        cout << (i == N - 1 ? "" : " ");
    }
    cout << "\n";
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int K;
    cin >> K;
    while (K--) {
        solve();
    }
    return 0;
}
