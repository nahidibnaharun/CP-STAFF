void solve()
{
    int n;
    cin >> n;

    if (n < 3)
    {
        cout << -1;
        return;
    }

    if (n == 3)
    {
        cout << 210;
        return;
    }

    string s = "1";
    int rem = 1;

    for (int i = 1; i < n; i++)
    {
        rem = (rem * 10) % 210;
    }

    rem = 210 - rem;
    string hi = to_string(rem);

    while ((int)s.size() + (int)hi.size() < n)
    {
        s.push_back('0');
    }

    cout << s << hi;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    // cin >> t;
    t = 1;
    while (t--)
    {
        solve();
        // cout << endl;
    }
    return 0;
}
