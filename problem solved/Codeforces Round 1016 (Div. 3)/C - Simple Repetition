bool Prim(ll x){
    if(x<2)return false;
    for(ll i=2;i*i<=x;i++)
    if(x%i==0)return false;
    return true;
}

int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
   int n;
   cin>>n;
   while(n--){
    ll x;int k;cin>>x>>k;
    if(k>1)cout<<"No"<<endl;
    else cout<<(Prim(x)?"Yes":"No")<<endl;
   }



    return 0;   
}
