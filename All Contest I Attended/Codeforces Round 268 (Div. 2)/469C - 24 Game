void solve(){
    int n;cin>>n;if(n<4){cout<<"NO";return;}cout<<"YES"<<endl;
    if(n%2==0){
        cout<<2<<" * "<<3<<" = "<<6<<endl;
        cout<<6<<" * "<<4<<" = "<<24<<endl;
        cout<<24<<" * "<<1<<" = "<<24<<endl;
        int x=(n-4)/2,y=5;
        while(x--){
            cout<<y+1<<" - "<<y<<" = "<<1<<endl;
            cout<<24<<" * "<<1<<" = "<<24<<endl;
            y+=2;
        }
    }
    else{
        cout<<1<<" + "<<5<<" = "<<6<<endl;
        cout<<6<<" * "<<4<<" = "<<24<<endl;
        cout<<3<<" - "<<2<<" = "<<1<<endl;
        cout<<24<<" * "<<1<<" = "<<24<<endl;
        int x=(n-5)/2,y=6;
        while(x--){
            cout<<y+1<<" - "<<y<<" = "<<1<<endl;
            cout<<24<<" * "<<1<<" = "<<24<<endl;
            y+=2;
        }
    }
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
