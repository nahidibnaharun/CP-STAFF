int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    //  freopen("badmilk.in", "r", stdin); 
    // freopen("badmilk.out", "w", stdout); 
   int n;
   cin>>n;
   string s,t,res;
   cin>>s>>t;
   res.reserve(2*n);

   for(int i=0;i<n;i++){
    res.push_back(s[i]);
    res.push_back(t[i]);
   }
   cout<<res<<endl;
   
    
    return 0;   
}
