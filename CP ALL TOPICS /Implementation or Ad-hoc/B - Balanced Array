bool Prim(ll x){
    if(x<=1)return false;
    if(x==2)return true;
    if(x%2==0)return false;
    for(ll i=3;i*i<=x;i+=2){
        if(x%i==0)return false;
    }
    return true;
}

int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
   int t;
   cin>>t;
   while(t--){
    int n;
		cin>>n;
		n/=2;
		if(n&1){
			cout << "NO" << endl;
			continue;
		}
		cout << "YES" << endl;
		for (int i = 1; i <= n; ++i) {
			cout << i * 2 << " ";
		}
		for (int i = 1; i < n; ++i) {
			cout << i * 2 - 1 << " ";
		}
		cout << 3 * n - 1 << endl;
   }
    return 0;   
}
