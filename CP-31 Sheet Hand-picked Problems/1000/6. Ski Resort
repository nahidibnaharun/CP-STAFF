void solve()
{
    ll n, k, q;
    cin >> n >> k >> q;
    vector<ll> a(n);

    for (auto &x : a)
    {
        cin >> x;
    }

    vector<ll> count;

    for (int i = 0; i < n; i++)
    {
        int cnt = 0;

        while (a[i] <= q && i < n)
        {
            i++;
            cnt++;
        }

        count.push_back(cnt);
    }

    ll ans = 0;

    for (ll x : count)
    {
        if (x == k)
        {
            x = (x / k);
            ans += (x * (x + 1)) / 2;
        }
        else if (x > k)
        {
            ll temp = ((x - k + 1) * (x - k + 2)) / 2;
            ans += temp;
        }
    }
    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
