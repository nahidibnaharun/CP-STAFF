void solve(){
int n;cin>>n;int oc=0;
for(int i=0,x;i<n;i++){cin>>x;if(x&1)oc++;}
cout<<(oc==1?"Yes":"No");
} 
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
  int t;cin>>t;
  while(t--){
    solve();
    cout<<endl;
  }
}
