#include <algorithm>
#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1e9+7;
/*

         _   _  __    _   _  _____   _____
    / | / / / _ \ \ \__\ \\__  _\\  _   \
   /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \
  / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
 /_/ |_/ /_/     \__\\_\  \_\\______\\___/
 
