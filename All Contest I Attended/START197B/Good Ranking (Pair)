#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
const int INF=1000000000;
static const int MOD = 998244353;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n,d=0;cin>>n;
    while(pow(4,d)<n)d++;
    vector<array<int,5>>dt(n+1);
    for(int id=1;id<=n;id++){
        int x=id-1;
        for(int i=0;i<d;i++){
            dt[id][i]=x%4;x/=4;
        }
    }
    int m=2*d;cout<<m<<endl;
    vector<int>od(n);
    iota(od.begin(),od.end(),1);
    for(int i=0;i<d;i++){
        stable_sort(od.begin(),od.end(),[&](int a,int b){
            return dt[a][i]<dt[b][i];
        });
        for(int x:od)cout<<x<<" ";
        cout<<endl;
        stable_sort(od.begin(),od.end(),[&](int a,int b){
            return dt[a][i]>dt[b][i];
        });
        for(int x:od)cout<<x<<" ";
        cout<<endl;
    }
}
