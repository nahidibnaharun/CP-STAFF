#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 10000;
const ll MAXN = 2e5 + 5;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{

    ll n;
    string s;
    cin >> n >> s;

    ll l = 0;
    ll cnt = 0;

    while (l + 1 < n)
    {
        if (s[l] == '(' || (s[l] == ')' && s[l + 1] == ')'))
        {
            l += 2;
        }
        else
        {
            ll r = l + 1;
            while (r < n && s[r] != ')')
                r++;

            if (r == n)
                break;

            l = r + 1;
        }
        cnt++;
    }

    cout << cnt << " " << n - l;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
