ll fun(ll x,int n, int l){
   if(l*2>n)return 0;
   ll ans=x;
   for(int i=2;i<=l;i++)ans*=x;
   return ans+fun(x,n,l+1);

}
void solve(){
int x,n;
cin>>x>>n;
cout<<fun(x*x*1LL,n,1);
}


