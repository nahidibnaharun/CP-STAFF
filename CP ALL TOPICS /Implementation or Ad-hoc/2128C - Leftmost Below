void solve(){
int n;cin>>n;vector<int>b(n);
for(auto &x:b)cin>>x;
int mp=b[0];
for(auto x:b){
    if(x>=2*mp){cout<<"NO";return;}
    mp=min(mp,x);
}
cout<<"YES";
} 
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
  int t;cin>>t;
  while(t--){
    solve();
    cout<<endl;
  }
}
