void solve()
{

    int n;
    cin >> n;
    vector<int> a(n);
    for (int i = 0; i < n; i++)
        cin >> a[i];

    int mx = *max_element(a.begin(), a.end());
    int need = (n + 1) / 2;

    if (n % 2 == 0)
    {
        cout << mx + need;
        return;
    }

    bool ok = false;
    for (int i = 0; i < n; i++)
    {
        if (a[i] == mx && (i % 2 == 0))
        {
            ok = true;
            break;
        }
    }

    if (ok)
        cout << mx + need;
    else
        cout << mx + need - 1;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
    // freopen("balancing.in", "r", stdin);
    // freopen("balancing.out", "w", stdout);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
