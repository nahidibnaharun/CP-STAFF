
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 1e5 + 7;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/
void solve()
{
    int n;
    cin >> n;

    string s;
    cin >> s;

    s = '1' + s + '1';

    int ans = 0;

    for (int i = 1, l = 0; i <= n; i++)
    {
        if (s[i] == '0')
        {
            if (s[i - 1] == '1')
                l = i;

            if (s[i + 1] == '1')
            {
                int c = (l == 1) + (i == n);
                ans += (i - l + 1 + c) / 3;
            }
        }
        else
        {
            ans++;
        }
    }

    cout << ans << endl;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }
    return 0;
}
