#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e17;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
    int n,k;cin>>n>>k;
    if(k==0)cout<<0;
    else if(n*n==k)cout<<2*n-1;
    else if(n>=k)cout<<1;
    else{
        int ans=1,d=n-1;
        bool bl=false;
        k= k-n;
        while(d<k && d>0 && k>0){
            k=k-d;ans++;
            if(bl){d=d-1;bl=false;}
            else bl=true;
        }
        if(d>0 && k>0)ans++;

        cout<<ans;


    }
 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
