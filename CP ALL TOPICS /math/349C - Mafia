void solve(){
int n;cin>>n;ll sm=0,ma=0,x;
for(int i=0;i<n;++i){
    cin>>x;sm+=x;ma=max(ma,x);
}
ll b=sm%(n-1);
sm-=b;
sm/=(n-1);
if(b)sm++;
cout<<max(ma,sm);
}

