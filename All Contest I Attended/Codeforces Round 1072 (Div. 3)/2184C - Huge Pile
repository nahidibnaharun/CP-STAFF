#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1006903069;
const int MAX = 1e7 + 10;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{

    ll n, k;
    cin >> n >> k;
    if (k > n)
    {
        cout << -1;
        return;
    }
    if (k == n)
    {
        cout << 0;
        return;
    }

    queue<pair<ll, int>> q;
    q.push({n, 0});
    set<ll> vist;

    vist.insert(n);

    while (!q.empty())
    {
        pair<ll, int> cur = q.front();
        q.pop();
        ll x = cur.first;
        int time = cur.second;

        ll a = x / 2, b = (x + 1) / 2;
        if (a == k || b == k)
        {
            cout << time + 1;
            return;
        }
        if (a > k && vist.find(a) == vist.end())
        {
            vist.insert(a);
            q.push({a, time + 1});
        }
        if (b > k && vist.find(b) == vist.end())
        {
            vist.insert(b);
            q.push({b, time + 1});
        }
    }
    cout << -1;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    // t = 1;
    while (t--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
