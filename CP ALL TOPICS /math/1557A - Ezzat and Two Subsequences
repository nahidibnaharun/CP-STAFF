#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int MOD = (int)(1e9) + 7;
const int MAX = 1e7 + 5;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
    

    int n;
    cin >> n;
    vector<int> a(n);
    for (auto &x : a) cin >> x;
    ll sum = 0;
    int mx = INT_MIN;
    for (int i = 0; i < n; i++) {
        sum += a[i];
        mx = max(mx, a[i]);
    }
    
    double result = 1.0 * (sum - mx) / (n - 1) + mx;
    
    cout << fixed << setprecision(9) << result ;

}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
