void solve()
{
    string s, t;
    cin >> s >> t;
    int w = 0;
    while (true)
    {
        int i = (int)s.length() - w - 1;
        int j = (int)t.length() - w - 1;
        if (i >= 0 && j >= 0 && s[i] == t[j])
            w++;
        else
            break;
    }
    cout << s.length() + t.length() - 2 * w;
}

