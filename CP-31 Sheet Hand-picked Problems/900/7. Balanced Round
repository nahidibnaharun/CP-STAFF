void solve(){
    ll n,k; cin >> n >> k;
    vector<ll>a(n); for(auto &x:a)cin >>x;
    if(n==1){
        cout<<0;return;
    }
    sort(a.begin() , a.end());

    int mx_len =1 , clen=1;

    for(int i=1 ;i<n;i++){
        if(a[i]-a[i-1] <=k){
            clen++;
        }
        else clen=1;

        mx_len = max(mx_len, clen);
    }
    cout<<n-mx_len;

}

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

  ll Test_Case; cin >> Test_Case;
  while (Test_Case--) {
  solve();
  cout<<endl;
  }

  return 0;
}
