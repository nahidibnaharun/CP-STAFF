#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
static const int INF = 1000000000;
const ll M=1e9+1;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
int k;cin>>k;
int sol=0;
bool tr=0;
for(int i=0;i<k;i++){
    int x;cin>>x;
    sol+=x;
    if(x%3==1)tr=1;
}
if(sol%3==0)cout<<0;
else if(sol%3==2)cout<<1;
else{
    if(tr)cout<<1;
    else cout<<2;
}
cout<<endl;

    // cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
}
