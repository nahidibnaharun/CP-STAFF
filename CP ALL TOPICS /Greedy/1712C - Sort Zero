#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 10000;
const ll MAXN = 2e5 + 5;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{
    ll n;
    cin >> n;

    vector<ll> a(n);
    map<ll, vector<ll>> p;

    for (ll i = 0; i < n; i++)
    {
        cin >> a[i];
        p[a[i]].push_back(i);
    }

    ll ans = 0;
    set<ll> ts;

    for (ll i = 0; i < n - 1; i++)
    {
        if (a[i] > a[i + 1])
            ts.insert(i);
    }

    while (!ts.empty())
    {
        ll i = *ts.begin();
        ll x;

        if (a[i] > 0)
            x = a[i];
        else
            x = a[i + 1];

        for (ll j : p[x])
        {
            a[j] = 0;

            ts.erase(j - 1);
            ts.erase(j);

            if (j > 0 && a[j - 1] > a[j])
                ts.insert(j - 1);

            if (j + 1 < n && a[j] > a[j + 1])
                ts.insert(j);
        }

        ans++;
    }

    cout << ans;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
