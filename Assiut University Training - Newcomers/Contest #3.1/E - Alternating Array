void solve(){
int n;cin>>n;
vector<int>a(n);
for(auto &x:a)cin>>x;
int b=0,c=0,d=0,e=0;
for(int i=0;i<n;i++){
    if(i%2==0 && a[i]>0)b++;
    if(i%2!=0 && a[i]>0)c++;
    if(i%2==0 && a[i]<0)d++;
    if(i%2!=0 && a[i]<0)e++;
}
cout<<min(n-(b+e),n-(c+d));

}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
    // while(t--){
        solve();
        // cout<<endl;
    // }
return 0;
}
