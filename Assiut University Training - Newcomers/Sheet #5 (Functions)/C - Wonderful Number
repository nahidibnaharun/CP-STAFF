void solve(){
ll n;cin>>n;
if(n%2==0){
    cout<<"NO";
    return;
}
string bin = "";
ll t= n;
while(t>0){
    bin +=(t%2)+'0';
    t/=2;
}
string nw=bin;
reverse(bin.begin(),bin.end());
if(bin==nw)cout<<"YES";
else cout<<"NO";
}


