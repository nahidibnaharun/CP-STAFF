LANG: C++
TASK: practice 
*/

int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    // freopen("diamond.in", "r", stdin); 
    // freopen("diamond.out", "w", stdout); 
    int t;
    cin>>t;
    while(t--){
        int n,x;
        cin>>n>>x;
        int ans=0,pre=0;
        for(int i=0;i<n;i++){
            int temp;
            cin>>temp;
            ans=max(ans,temp-pre);
            pre=temp;
        }
        cout<<max(ans,2*(x-pre))<<endl;
    }	
    return 0;
}
