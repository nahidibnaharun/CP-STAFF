void solve(){
    int n,k;cin>>n>>k;
    string s;cin>>s;
    vector<int>a(n);
    bool cap[26]={0};
    for(int i=0;i<k;++i){
        char x;cin>>x;cap[x-'a']=1;
    }
    for(int i=0;i<n;++i){
        if(cap[s[i]-'a'])a[i]=1;
        else a[i]=0;
    }
    ll f[n+1],ans=0;
    f[0]=0;
    for(int i=0;i<n;++i){
        if(a[i]==0)f[i+1]=0;
        else f[i+1]=f[i]+1;
    ans+=f[i+1];
    }cout<<ans;
 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
