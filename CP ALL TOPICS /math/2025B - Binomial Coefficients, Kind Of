void solve(){
int n;
    cin >> n;
    vector<int> a(n);
    for (int i = 0; i < 2; i++)
        for (int j = 0; j < n; j++)
            cin >> a[j];
    int mx = *max_element(a.begin(), a.end());
    vector<int> ans(mx + 1, 1);
    for (int i = 1; i <= mx; i++)
        ans[i] = (2LL * ans[i - 1]) % MOD;
    for (auto x : a)
        cout << ans[x] <<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
