void solve()
{
    const int mx = 35;
    ll c[mx][mx];
    memset(c, 0, sizeof(c));

    for (int i = 0; i < mx; i++)
    {
        c[i][0] = c[i][i] = 1;
        for (int j = 1; j < i; j++)
            c[i][j] = c[i - 1][j - 1] + c[i - 1][j];
    }
    int t;
    cin >> t;
    while (t--)
    {
        ll n, k;
        cin >> n >> k;
        int d = 0;
        while ((1LL << d) < n)
            d++;
        ll L = d + 1, vld = 0;
        for (int l = 1; l <= d; l++)
        {
            ll rm = k - l;
            if (rm < 0)
                continue;
            int tmx = min(l - 1, (int)rm);
            for (int t = 0; t <= tmx; t++)
                vld += c[l - 1][t];
        }
        if (L <= k)
            vld++;
        ll ans = n - vld;
        cout << ans << endl;
    }
}

