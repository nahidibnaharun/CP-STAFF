void solve() {
    
  int n,k;cin >>n>>k;
  vector<int>a(n),cnt(k,0);
  int k1=0;
  for(int i=0;i<n;i++){
    cin >>a[i];
    if(a[i]==k)k1++;
    if(a[i]<k)cnt[a[i]]++;
  }
  int ans=0;
  for(int i=0;i<k;i++){
    if(!cnt[i])ans++;
  }
  cout<<max(ans,k1);
  
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
  int t; cin >>t;
  while(t--){
    solve();
    cout<<endl;
  }
return 0;
}
