void solve() { 
    string a, b;
    cin >> a >> b;
    
    int sa = a.size(), sb = b.size();
    int nm = 0;

    if (a == b) {
        cout << "YES";
        return;
    }
    if(sa !=sb){
        cout<<"NO";
        return;
    }

    vector<int> ans;
    for (int i = 0; i < sa; i++) {
        if (a[i] != b[i]) {
            ans.push_back(i);
            nm++;
        }
    }

    if (nm != 2) {
        cout << "NO";
        return;
    }

    swap(a[ans[0]], a[ans[1]]);
    if (a == b) {
        cout << "YES";
    } else {
        cout << "NO";
    }
}


int main(){
    ios_base::sync_with_stdio(false);
