void solve(){
int n;cin>>n;ll s=0;
int zc=0;
for(int i=0;i<n;i++){
    int x;cin>>x;s+=x;if(x==0)zc++;
}
cout<<s+zc;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
}
