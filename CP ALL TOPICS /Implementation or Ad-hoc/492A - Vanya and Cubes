void solve(){
int n;
cin>>n;
int ct=0,st=0;
for(int i=1;;i++){
    st+=(i*(i+1))/2;
    ct++;
    if(st>n){
        break;
    }
}
cout<<--ct;
cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
    // int t;cin>>t;
    // while(t--)
    solve(); 
}


