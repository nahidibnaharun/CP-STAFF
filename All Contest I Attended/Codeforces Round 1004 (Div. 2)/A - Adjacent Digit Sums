*/

int main() {
    ios::sync_with_stdio(false);
    cin.tie(0);
    int t;
    cin>>t;
    while(t--){
        int x,y;
        cin>>x>>y;
        if(y>x+1){
            cout<<"No"<<endl;
            continue;
        }
        if((x+1-y)%9==0)cout<<"Yes";
        else cout<<"No";
        cout<<endl;
    }
   return 0;
    
}
