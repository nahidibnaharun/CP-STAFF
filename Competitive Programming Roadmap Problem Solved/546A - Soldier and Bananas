int main() {
    ios::sync_with_stdio(false);
    cin.tie(0);
    int a,b,c,cost=0;cin>>a>>b>>c;
    for(int i=1;i<=c;i++){
        cost+=i*a;
    }
    (cost-b>0)?cout<<cost-b:cout<<0;
   return 0;
    
}
