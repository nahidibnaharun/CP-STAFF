void solve() {
    int n; cin >>n;
    vector<int>a(n);
    int bp=-1,bc=0;
    for(int i=0;i<n;i++)cin>>a[i];
    for(int i=0;i<n-1;i++){
        if(a[i]>a[i+1]){
            bc++;
            bp=i;
        }
    }
    if(bc==0)cout<<0;
    else if(bc>1)cout<<-1;
    else{
        if(a[n-1]<=a[0])cout<<n-1-bp;
        else cout<<-1;
    }

}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
