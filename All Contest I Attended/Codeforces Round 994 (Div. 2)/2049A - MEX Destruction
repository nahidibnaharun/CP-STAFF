void solve(){
    int n; cin >> n;
    vector<int>a(n); for(auto &x:a)cin >> x;

    while(!a.empty() && a.back()==0)a.pop_back();

    reverse(a.begin() ,a.end());

    while(!a.empty() && a.back()==0)a.pop_back();

    reverse(a.begin(),a.end());

    if(a.empty()){
        cout<<0;return;
    }
    bool chk=false;
    for(auto x:a)chk|=x==0;
    if(chk)cout<<2;
    else cout<<1;
}


 
 
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    


    ll Test_Case; cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout<<endl;
    }
    return 0;
}
