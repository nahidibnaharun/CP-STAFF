void solve(){
    ll n;cin>>n;
    ll l=0,r=2e9,ans=0;
    while(l<=r){
        ll mid=(l+r)/2;
        ll sm=mid*(mid+1)/2;
        if(sm<=n){ans=mid;l=mid+1;}
        else r=mid-1;
    }
    cout<<ans;
}
