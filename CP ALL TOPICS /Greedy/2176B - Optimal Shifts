void solve()
{
    int n;
    cin >> n;
    string s;
    cin >> s;
    vector<int> a(n, 0);
    int cnt = 0;
    for (int i = n - 1; i >= 0; i--)
    {
        cnt++;
        if (s[i] == '1')
            break;
    }
    if (s[0] != '1')
        a[0] = cnt;
    int ans = a[0];
    for (int i = 1; i < n; i++)
    {
        if (s[i] != '1')
            a[i] = a[i - 1] + 1;
        ans = max(ans, a[i]);
    }

    cout << ans;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;

    for (int i = 1; i <= t; i++)
    {
        solve();
        cout << endl;
    }

    return 0;
}
