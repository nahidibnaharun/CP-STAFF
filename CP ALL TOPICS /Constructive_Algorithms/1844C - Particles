#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 1e7 + 10;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/
int c[200000];
void solve()
{

    int n;
    cin >> n;

    for (int i = 0; i < n; i++)
        cin >> c[i];

    bool allneg = true;
    for (int i = 0; i < n; i++)
        allneg &= (c[i] < 0);

    if (allneg)
    {
        cout << *max_element(c, c + n) << endl;
    }
    else
    {
        ll ans1 = 0, ans2 = 0;
        for (int i = 0; i < n; i++)
        {
            if (i & 1)
                ans1 += max(c[i], 0);
            else
                ans2 += max(c[i], 0);
        }
        cout << max(ans1, ans2) << endl;
    }
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    // t = 1;
    while (t--)
    {
        solve();
    }
    return 0;
}
