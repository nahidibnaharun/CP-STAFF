void solve(){
    
    int n; cin >> n;
        if(n%2==1)
        {
            for(int i=0;i<n;i++)
                for(int j=i+1;j<n;j++)
                    if(j - i <= n / 2) cout << 1 << " ";
                    else cout << -1 << " ";
        }
        else{ 
            for(int i=0;i<n;i++)
                for(int j=i+1;j<n;j++)
                   if(j-i<n/2) cout << 1 << " ";
                    else if(j-i==n/2) cout << 0 << " ";
                    else cout << -1 << " ";
        }
}






int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

  ll Test_Case; cin >> Test_Case;
  while (Test_Case--) {
  solve();
  cout<<endl;
  }

  return 0;
}
