void solve() { 
    string a,b;
    cin>>a>>b;
    int as=a.size(),bs=b.size();
    int ans =as+bs;
    int mxm=0;
    for(int i=as-1,j=bs-1 ; i>-1 && j>-1 ; i--,j--){
        if(a[i]==b[j])mxm++;
        else break;
    }
    cout<< ans-2*mxm;
}


