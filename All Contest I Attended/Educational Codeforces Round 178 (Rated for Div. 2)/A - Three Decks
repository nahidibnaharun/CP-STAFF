 void solve(){
   int a,b,c;cin>>a>>b>>c;
   int s=a+b+c;
   if(s%3==0){
    int n=s/3;
    if(a<=n && b<=n)cout<<"YES";
    else cout<<"NO";
   }
   else cout<<"NO";

    cout<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
    
       
}

