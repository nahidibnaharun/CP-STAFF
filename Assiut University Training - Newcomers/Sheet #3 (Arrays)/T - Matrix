void solve(){
ll a;cin>>a;
vector<vector<int>>ar(a,vector<int>(a));
ll s1=0,s2=0;
for(int i=0;i<a;i++){
    for(int j=0;j<a;j++){cin>>ar[i][j];
    if(i==j){
        s1+=ar[i][j];
    }
    if(i+j==a-1)s2+=ar[i][j];
    }
}
cout<<abs(s1-s2);

}
    
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
