void solve(){
    int n;
    cin>>n;
    vector<int>a(n);
    for(int i=0;i<n;i++)cin>>a[i];

    ll g=0;
    for (int i=0;i<n;i++) {
        g=gcd(g,abs(a[i]-(i+1))); 
    }
    cout<<g;

}

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

  ll Test_Case; cin >> Test_Case;
  while (Test_Case--) {
  solve();
  cout<<endl;
  }

  return 0;
}
