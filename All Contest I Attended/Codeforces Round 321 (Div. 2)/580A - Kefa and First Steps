void solve() {
    int n; cin >> n;
    vector<ll>a(n); for(auto &x:a)cin >>x;

    int left=0 , right=1;
    int ans=1;
    for(; right<n ;right++){

        if(a[right-1] >a[right]){
            left=right;
        }

        ans = max(ans, right-left+1);
    }
    if(n==0)cout<<0;
    else
    cout<<ans;

}




int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

