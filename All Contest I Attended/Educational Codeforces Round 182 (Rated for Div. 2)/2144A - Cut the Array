void solve(){
int n;cin>>n;
vector<int>a(n);
for(int i=0;i<n;i++)cin>>a[i];
int tl=0;
for(int i=0;i<n;i++)tl+=a[i];
if(tl%3==0)cout<<1<<" "<<2;
else cout<<0<<" "<<0;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
