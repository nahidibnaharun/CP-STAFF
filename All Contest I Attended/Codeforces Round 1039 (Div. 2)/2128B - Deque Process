#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
const int INF=1000000000;

/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
int n;cin>>n;vector<int>p(n);for(auto &x:p)cin>>x;
string ans;int l=0,r=n-1;
for(int i=1;i<=n;++i){
    bool tl;
    if(i%2==1)tl=p[l]<p[r];
    else tl=p[l]>p[r];
    if(tl){ans.push_back('L');++l;}
    else{ans.push_back('R');--r;}
}cout<<ans;
}  
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
  int t;cin>>t;
  while(t--){
    solve();
    cout<<endl;
  }
}
