void solve(){
 int n;
    cin >> n;
    vector<ll> a(n);
    for(int i = 0; i < n; i++){
        cin >> a[i];
    }

    ll mv = 0;
    ll pv = a[0];
    for(int i = 1; i < n; i++){
        if(a[i] < pv){
            mv += (pv - a[i]);
        } else {
            pv = a[i];
        }
    }

    cout << mv << "\n";
}
int main(){
    ios_base::sync_with_stdio(false);
