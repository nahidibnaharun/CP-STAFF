bool chk(int a,int b){
    return max(a,b)<=2*(min(a,b)+1);
}

void solve(){
    int a,b,c,d;cin>>a>>b>>c>>d;
    if(chk(a,b) && chk(c-a,d-b))cout<<"YES";
    else cout<<"NO";
 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
