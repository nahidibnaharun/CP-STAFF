
#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1e9+7;
/*

         _   _  __    _   _  _____   _____
    / | / / / _ \ \ \__\ \\__  _\\  _   \
   /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \
  / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
 /_/ |_/ /_/     \__\\_\  \_\\______\\___/
 
ID: mdnahidibnaharun
LANG: C++ 
TASK: Codeforces Round 1061 (Div. 2)
*/




void solve(){
    int n; cin >> n;
    string s,w; cin >> s;
    bool chk=false;
    for(int i= 0;i<n;i++){
        if(s[i] !=s[(n-i)-1]){
            s[i] =s[(n-i)-1]; chk=true;
        }
        else if(s[i] == s[n-i-1] && chk==true)break;
    }
    w=s;reverse(s.begin() ,s.end());
    cout<<(s==w?"YES":"NO");
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    


    ll Test_Case;
    cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout<<endl;
    }
    return 0;
}
