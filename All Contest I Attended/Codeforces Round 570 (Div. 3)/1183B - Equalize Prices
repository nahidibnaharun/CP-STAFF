void solve()
{
    
        int n,k; cin >> n>>k;
        vector<int>a(n);for(auto &x:a)cin >> x;
        int mn=*min_element(a.begin() , a.end()), mx = *max_element(a.begin() , a.end());
        if(mx-mn>2*k)cout<<-1;
        else cout<<mn+k;


    
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
    // seive();
    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
