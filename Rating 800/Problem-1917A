void solve(){
int n;
cin>>n;
int ar[n],ne=0,p=0,z=0;
for(int i=0;i<n;i++){cin>>ar[i];
if(ar[i]<0)ne++;
else if(ar[i]>0)p++;
else z++;

}
if(ne%2!=0 || z>0){
cout<<0<<endl;
}
else{
	cout<<1<<endl;
cout<<1<<" "<<0<<endl;
}
return;
}
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	int t;
	cin>>t;
	while(t--)
	solve();
return 0;
}
