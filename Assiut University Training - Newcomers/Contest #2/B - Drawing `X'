void solve(){
   int n;cin>>n;
   vector<vector<char>>a(n,vector<char>(n));
   for(int i=0;i<n;i++){
    for(int j=0;j<n;j++){
        if(i==j)a[i][j]='\\';
        else if(i+j==n-1)a[i][j]='/';
        else a[i][j]='*';
    }
   }
if(n%2!=0)
a[n/2][n/2]='X';

   for(int i=0;i<n;i++){
    for(int j=0;j<n;j++){
        cout<<a[i][j];
    }
    cout<<endl;
   }
}
    
int main(){
    ios_base::sync_with_stdio(false);
