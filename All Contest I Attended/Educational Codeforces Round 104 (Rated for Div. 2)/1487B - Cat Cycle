void solve(){
    ll n,k; cin >>n >>k;
    if(n%2==0){
        ll ps=k%n; 
        if(ps==0)ps=n;
        cout<<ps;
    }
    else{

        ll ps=k+(k-1)/(n/2);
        ps=(ps-1)%n+1;
        cout<<ps;
    }
}






int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

  ll Test_Case; cin >> Test_Case;
  while (Test_Case--) {
  solve();
  cout<<endl;
  }

  return 0;
}
