void solve(){
string s;int k;cin>>s>>k;
int n=s.length(),ans=0;
pair<char,char>ar[k];
for(int i=0;i<k;i++){
    char a,b;cin>>a>>b;ar[i]={a,b};
}
for(int i=0;i<k;++i){
    char f=ar[i].first,se=ar[i].second;
    for(int j=0;j<n;++j){
        if(s[j]==f || s[j]==se){
            int n1=0,n2=0,frm=j,t=frm;
            while(t<n && (s[t]==f || s[t]==se)){
                if(s[t]==f)n1++;
                else n2++;
                t++;
            }t--;
            ans+=min(n1,n2);
            j=t;
        }
    }
}cout<<ans;
}
 
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
    // while(t--){
        solve();
    //     cout<<endl;
    // }    
return 0;
}
