#include <bits/stdc++.h>
using namespace std;
using ll = long long;

void solve(){
ll n;cin>>n;
ll ans=n;
while(n){ans+=n/2;n/=2;}
cout<<ans;
}
int main(){
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
    return 0;
}
