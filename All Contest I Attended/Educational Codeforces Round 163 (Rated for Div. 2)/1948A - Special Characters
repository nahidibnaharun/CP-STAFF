void solve() {
int n;cin>>n;
if(n%2==1){cout<<"NO";return;}
cout<<"YES"<<endl;
for(int i=0;i<n/2;++i)
    for(int j=0;j<2;++j)cout<<"AB"[i&1];
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
    solve();
    cout<<endl;
    }
}
