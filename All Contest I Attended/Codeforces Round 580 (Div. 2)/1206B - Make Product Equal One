void solve()
{

    int n;
    cin >> n;

    ll cost = 0;
    int zeroCount = 0;
    int negCount = 0;

    for (int i = 0; i < n; i++)
    {
        ll x;
        cin >> x;

        if (x > 1)
        {
            cost += (x - 1);
        }
        else if (x < -1)
        {
            cost += (-1 - x);
            negCount++;
        }
        else if (x == -1)
        {
            negCount++;
        }
        else if (x == 0)
        {
            zeroCount++;
        }
    }

    if (zeroCount > 0)
    {
        cost += zeroCount;
    }
    else
    {
        if (negCount % 2 == 1)
        {
            cost += 2;
        }
    }

    cout << cost;
}

