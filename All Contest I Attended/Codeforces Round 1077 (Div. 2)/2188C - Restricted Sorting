
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 1e5 + 7;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/
void solve()
{

    int n;
    cin >> n;

    vector<int> v(n);
    int mn = 1e9, mx = 0;

    for (int i = 0; i < n; i++)
    {
        cin >> v[i];
        mx = max(mx, v[i]);
        mn = min(mn, v[i]);
    }

    if (is_sorted(v.begin(), v.end()))
    {
        cout << -1 << endl;
        return;
    }

    vector<int> tmp = v;
    sort(tmp.begin(), tmp.end());

    int ans = 1e9;

    for (int i = 0; i < n; i++)
    {
        if (v[i] == tmp[i])
            continue;

        int l = abs(v[i] - mn);
        int r = abs(v[i] - mx);

        ans = min(ans, max(l, r));
    }

    cout << ans << endl;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }
    return 0;
}
