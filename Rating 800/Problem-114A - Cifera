void solve() {
unsigned long long a,b;
int ans=0;
cin>>a>>b;
if(b%a==0){
while(b/a>=a){
b = b/a;
ans++;
}
if(b==a)cout<<"YES"<<endl<<ans;
else cout<<"NO";
}else cout<<"NO";
return;
}

