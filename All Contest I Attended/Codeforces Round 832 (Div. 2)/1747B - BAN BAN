void solve()
{

    int n;
    cin >> n;
    cout << n / 2 + n % 2 << endl;
    int l = 1, r = 3 * n;
    while (l < r)
    {
        cout << l << " " << r << endl;
        l += 3;
        r -= 3;
    }
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        // cout << endl;
    }

    return 0;
}
