int calc(string s)
{
    int ans = count(s.begin(), s.end(), '0');
    bool zero = false, one = false;

    for (int i = 0; i < (int)s.size(); i++)
    {
        if (s[i] == '0')
            zero = true;
        if (s[i] == '1')
            one = true;

        if (zero && one)
        {
            ans++;
            zero = one = false;
        }
    }
    return ans;
}

void solve()
{
    int n;
    cin >> n;

    string a, b;
    cin >> a >> b;

    int ans = 0;
    string s = "";

    for (int i = 0; i < n; i++)
    {
        if (a[i] != b[i])
        {
            ans += 2 + calc(s);
            s = "";
        }
        else
        {
            s += a[i];
        }
    }

    ans += calc(s);
    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
