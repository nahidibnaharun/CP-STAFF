void solve() {
    int n; cin >>n;
    vector<int>a(n);
    for(auto &x:a)cin>>x;
    sort(a.rbegin(),a.rend());
    ll ans=0;
    for(int i=0,j=n;i<n;i++){
        ans +=abs(j-a[i]);
        j--;
    }
    cout<<ans;

}

