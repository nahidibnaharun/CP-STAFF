void solve(){
     int n;
   float sum=0;
   cin>>n;
   int a[n];
   for(int i=0;i<n;i++){
   cin>>a[i];
   sum+=a[i];
   }
sum=sum/2.0;
 
sort(a,a+n);
int ans=0,cnt=0;
for(int i=n-1;i>=0;i--){
    cnt++;
    ans+=a[i];
    if(ans>sum)break;
}
cout<<cnt;

}
