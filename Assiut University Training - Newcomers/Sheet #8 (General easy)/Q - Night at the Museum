void solve(){
    string s;cin>>s;
    int n=s.size(),d=0;
    char c='a';
    for(auto x:s){
        int tm=min({abs(x-c),abs(c-'a')+abs(x-'z')+1,abs(x-'a')+abs(c-'z')+1});
        c=x;
        d+=tm;
    }
    cout<<d;
    cout<<endl;

}
