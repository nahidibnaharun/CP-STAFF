void solve() {
    int n; cin >> n;
    vector<int>a(n); for(auto &x:a)cin>>x;
    n =unique(a.begin() ,a.end())-a.begin();
    int ans =n;
    for(int i=0;i+2<n;i++){
        ans-= (a[i]<a[i+1] && a[i+1]<a[i+2]);
        ans -= (a[i]>a[i+1] && a[i+1]>a[i+2]);
    }
    cout<<ans;
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
   int t;
   cin >>t;
   while(t--){
    solve();
    cout<<endl;
   }
return 0;
}
