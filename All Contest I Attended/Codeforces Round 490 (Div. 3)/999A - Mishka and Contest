void solve()
{

    int n, k;
    cin >> n >> k;

    vector<int> a(n);
    for (int i = 0; i < n; ++i)
    {
        cin >> a[i];
    }

    int ans = 0;

    while (!a.empty() && a.back() <= k)
    {
        ++ans;
        a.pop_back();
    }

    reverse(a.begin(), a.end());

    while (!a.empty() && a.back() <= k)
    {
        ++ans;
        a.pop_back();
    }

    cout << ans;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t = 1;
    // cin >> t;
    while (t--)
    {
        solve();
        // cout << endl;
    }
    return 0;
}
