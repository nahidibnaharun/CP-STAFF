#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e17;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
    int n,m;cin>>n>>m;
    vector<int>a(n);for(auto &x:a)cin>>x;
    sort(a.rbegin(),a.rend());
    int ans=0,o=0;
    for(int i=0;i<n;++i){
        if(m>0){
         if(a[i]>1){
            ans+=a[i]-a[i]%2;
            m-=a[i]/2;
            a[i]=a[i]%2;
        }
        }
    }
    for(auto x:a)if(x==1)o++;
    if(m>0 && o>0){
        if(m==o)ans+=m;
        else if(m<o){
            m-=(o-m);
            ans+=m;
        }
        else if(m>o){
            ans+=o;
        }
    }
   
    cout<<ans;

 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
