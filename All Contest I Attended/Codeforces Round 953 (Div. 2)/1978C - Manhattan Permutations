#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1000000007;
/*
//     
         _   _  __    _   _  _____   _____
//     / | / / / _ \ \ \__\ \\__  _\\  _   \ 
//    /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \ 
//   / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
//  /_/ |_/ /_/     \__\\_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve() {
    int n; ll k; cin >> n>>k;
    ll ms=0;
    for(int i=0 ;i<n;i++)ms+=abs(n-1-i-i);
    if(k%2 !=0 || k>ms)cout<<"No";
    else{
        cout<<"Yes"<<endl;
        vector<int>ans(n);
        k/=2;
        iota(ans.begin(),ans.end() ,0);

        for(int i=0; k>0 ;i++){
            if(k>=n-1-2 *i){
                swap(ans[i],ans[n-1-i]);
                k-=n-1-2*i;
            }
            else{
                swap(ans[i],ans[i+k]);
                k=0;
            }
        }
        for(int i=0 ;i<n;i++)cout<<ans[i]+1<<" ";
    }
    
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
   int t;
   cin >>t;
   while(t--){
    solve();
    cout<<endl;
   }
return 0;
}
