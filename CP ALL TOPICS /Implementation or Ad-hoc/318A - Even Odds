void solve(){
ll a,b;cin>>a>>b;
if(a%2){
    if((a/2)+1>=b)cout<<2*b-1;
    else cout<<2*(b-(a/2 +1));
}
else{
    if(a/2 >=b){
        cout<<2*b-1;
    }
    else{
        cout<<2*(b-a/2);
    }
}cout<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   // int t;cin>>t;
   // while(t--)
    solve();
} 
