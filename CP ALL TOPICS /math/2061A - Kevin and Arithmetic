 void solve(){
int n;cin>>n;
int o=0,e=0;
while(n--){
    int x;cin>>x;if(x%2==0)e++;else o++;
}
    if(e>0 && o>0)cout<<o+1;
    else if(e>0)cout<<1;
    else cout<<o-1;
    cout<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
}
