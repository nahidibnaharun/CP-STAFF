void solve(){
    ll a,b;cin>>a>>b;
    if((a%2==0) && (b%2==1)){
        cout<<-1;return;
    }
    if((a%2==1) && (b%2==1)){
        cout<<a*b+1;return;
    }
    if(a%2==1){
        int a2=0;
        ll tm=b;
        while(tm%2==0){
            tm/=2;
            a2++;
        }
        if(a2==1){cout<<-1;return;}
        else{
            cout<<(a*(b/2)+2);return;
        }
    }
    else cout<<(a*(b/2)+2);

}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
