void solve(){
    int x;cin>>x;
    int mxa=0,mxb=0;
    while(x--){
        int a,b;cin>>a>>b;mxa=max(a,mxa);mxb=max(b,mxb);
    }
    cout<<2*(mxa+mxb);
 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
