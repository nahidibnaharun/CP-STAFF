void solve(){
ll a,b,c;cin>>a>>b>>c;
ll ans;
int ps=(c-1)%6;
if(ps==0)ans=a;
else if(ps==1)ans=b;
else if(ps==2)ans=b-a;
else if(ps==3)ans=-a;
else if(ps==4)ans=-b;
else ans=a-b;
ans=(ans%INF+INF)%INF;
cout<<ans;
}

