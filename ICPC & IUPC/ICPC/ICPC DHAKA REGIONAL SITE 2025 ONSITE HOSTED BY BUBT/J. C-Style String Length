#include<bits/stdc++.h>
#define endl '\n'

using namespace std;
using ll = long long int;

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);

	
	int tt; cin >> tt;
	while(tt--) {
		string s; cin >> s;
		int cnt = 0, flag = 1, n = s.length();
		for(int i=0; i<n; i++) {
			if(i+1 < n) {
				if(s[i+1]=='0' && s[i]=='\\') {
					break;
				}
				else if(s[i]=='\\' && s[i+1]=='\\') cnt++, i++;
				else if(s[i]=='0') cnt++;
				else {
					flag = 0;
					break;
				}
			}
			else {
				if(s[i]=='0') cnt++;
				else flag = 0;

				break;
			}

			
		}

		if(flag) cout << cnt << '\n';
		else cout << "INVALID\n";
	}

	return 0;
}
