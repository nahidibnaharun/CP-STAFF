void solve(){
int n,s;cin>>n>>s;vector<int>v(n);
for(auto &x:v)cin>>x;
int ans=min(abs(s-v[0]),abs(s-v.back()))+v.back()-v[0];
cout<<ans;
cout<<endl;

}  
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
  int t;cin>>t;
  while(t--)
    solve();
}
