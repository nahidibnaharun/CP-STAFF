void solve(){
int n,q;cin>>n>>q;
vector<ll>a(n,0);
for(int i=1;i<=n;i++)cin>>a[i];
for(int i=1;i<=n;i++)a[i]+=a[i-1];
while(q--){
    int x,y;cin>>x>>y;
    cout<<a[y]-a[x-1]<<endl;
}
}
    
