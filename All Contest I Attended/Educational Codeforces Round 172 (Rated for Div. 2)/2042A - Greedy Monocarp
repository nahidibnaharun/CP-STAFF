void solve()
{
    int n, target;
    cin >> n >> target;
    vector<int> a(n);
    for (auto &x : a)
        cin >> x;
    sort(a.rbegin(), a.rend());

    int sum = 0, ans = 0;

    for (auto &x : a)
    {
        sum += x;

        if (sum >= target)
        {
            if (sum > target)
            {
                sum -= x;
                ans = (target - sum);
                cout << ans;
            }
            else
            {
                cout << 0;
            }
            return;
        }
    }
    cout << target - sum;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    // t = 1;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
