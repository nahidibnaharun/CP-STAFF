void solve(){
    int n;cin>>n;ll x=n;
    if(n>=77774444)cout<<4444477777;
    else{
        while(true){
            int s=0,f=0;ll a=x;
            while(a>0){
                int b=a%10;
                if(b!=4 && b!=7)break;
                else if(b==4)s++;
                else if(b==7)f++;
                a/=10;
            }
            if(a==0 && s==f){cout<<x;break;}
            x++;
        }
    }
}
