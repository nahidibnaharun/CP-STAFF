 void solve(){
 int n;cin>>n;
int w=-1,bs=0;
for(int i=1;i<=n;i++){
    int a,b;cin>>a>>b;
    if(b>bs && a<=10){w=i;bs=b;}
}
 cout<<w;
    cout<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
}
