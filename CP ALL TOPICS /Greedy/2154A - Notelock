void solve(){
    int n,k;cin >>n >>k;
    string s;
    cin >>s;
    int ans=0, last=-1e9;
    for(int i=0 ;i<n;i++){
        if(s[i] =='1' && i-last>=k)ans++;
        if(s[i]=='1')last=i;
    }
    cout<<ans<<endl;
}

int main(){
ios_base::sync_with_stdio(false);
cin.tie(NULL);
    int Test_Case;
    cin >> Test_Case;
    
    while(Test_Case--){
        solve();
        // cout<<endl;
    }
return 0;
}
    
