void solve(){
int a,b;cin>>a>>b;
if(a%2)cout<<"NO";
else{
    if(b%2){
        if(a)cout<<"YES";
        else cout<<"NO";
    }
    else cout<<"YES";
}

cout<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
