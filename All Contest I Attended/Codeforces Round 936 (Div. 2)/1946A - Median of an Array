void solve(){
    int n; cin >>n;
    vector<int>a(n);
    for(auto &x: a)cin >>x;
    sort(a.begin(),a.end());
    int p=(n+1)/2 -1 ,res=count(a.begin() + p , a.end() , a[p]);
    cout<<res;
}

int main(){
ios_base::sync_with_stdio(false);
cin.tie(NULL);
    int Test_Case;
    cin >> Test_Case;
    
    while(Test_Case--){
        solve();
        cout<<endl;
    }
return 0;
}
    
