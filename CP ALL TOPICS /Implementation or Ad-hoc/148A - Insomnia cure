void solve(){
ll a,b;cin>>a>>b;
ll c=(a+1)/2;
if(b<=c)cout<<2*b-1;
else cout<<2*b-2*c;
cout<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   int t;cin>>t;
   while(t--)
    solve();
} 
