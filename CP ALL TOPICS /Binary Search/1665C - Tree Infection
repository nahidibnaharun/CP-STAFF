#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 1e7 + 10;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

int ans;

void proc(vector<int> &a)
{
    if (a.empty())
        return;

    int n = a.size();
    int last = 0;

    for (int i = 0; i < n; i++)
    {
        if (a[i] == a[0])
            last = i;
        else
            break;
    }

    a[last]--;
    for (int i = 0; i < n; i++)
        a[i]--;

    ans++;

    while (!a.empty() && a.back() <= 0)
        a.pop_back();

    proc(a);
}

void solve()
{
    int n;
    cin >> n;

    vector<int> a(n);
    ans = 0;

    for (int i = 1; i < n; i++)
    {
        int x;
        cin >> x;
        a[--x]++;
    }

    a.emplace_back(1);
    sort(a.rbegin(), a.rend());

    while (!a.empty() && a.back() <= 0)
        a.pop_back();

    n = a.size();

    for (int i = 0; i < n; i++)
    {
        a[i] -= (n - i);
        ans++;
    }

    sort(a.rbegin(), a.rend());

    while (!a.empty() && a.back() <= 0)
        a.pop_back();

    proc(a);

    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    // t = 1;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
