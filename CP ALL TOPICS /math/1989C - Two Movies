#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF=(1LL<<62);
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
ll n;cin>>n;
vector<ll>a(n),b(n);
for(auto &x:a)cin>>x;
for(auto &x:b)cin>>x;
ll ps=0,ng=0,s1=0,s2=0;
for(int i=0;i<n;i++){
    if(a[i]==1 && b[i]==1)ps++;
    if(a[i]==-1 && b[i]==-1)ng++;
    if(a[i]==1 && b[i]!=1)s1++;
    if(a[i]!=1 && b[i]==1)s2++;
}
while(ps--)s1>s2?s2++:s1++;
while(ng--)s1>s2?s1--:s2--;
cout<<min(s1,s2);
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
