#include<bits/stdc++.h>
using namespace std;
using ll = long long;
/*
ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
	 int n;
	 cin>>n;
	 string s;
	 cin>>s;
	 int c=0;
	 int d=0;
	 for(int i=0;i<n;i++){
		 if(s[i]=='.'&&s[i+1]=='.'&&s[i+2]=='.')c++;
		 if(s[i]=='.')d++;
	 }
	 if(c>0)cout<<2<<endl;
	 else cout<<d<<endl;
return;
}
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	int t;
	cin>>t;
	while(t--)
	solve();
return 0;
}
