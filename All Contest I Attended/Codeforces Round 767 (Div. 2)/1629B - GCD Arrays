void solve(){
    int l,r,k;cin>>l>>r>>k;
    if(l==r){
        if(l==1)cout<<"NO";
        else cout<<"YES";
        return;
    }
    int mm=(r-l+1)-((r/2)-(l-1)/2);
    if(mm>k)cout<<"NO";
    else cout<<"YES";
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
    solve();
    cout<<endl;
    }
}
