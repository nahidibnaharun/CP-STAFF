 void solve(){
   int a,b;cin>>a>>b;
   if(a==b)cout<<0;
   else if(a>b){
    if((a-b) %2==0)
        cout<<1;
    else
        cout<<2;
   }
   else{
    if((b-a) %2==0)
        cout<<2;
    else cout<<1;
   }
   
    cout<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();

       
}


