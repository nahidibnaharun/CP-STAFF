void solve() { 
    string s;
    cin >> s;
    int n = s.size();
    for(int i=0;i<n/2;i++){
        if(s[i]!=s[n-i-1]){
            if((s[i]=='?' && s[n-i-1]!='?') || (s[i]!='?' && s[n-i-1]=='?')){
                if(s[i]=='?')s[i]=s[n-i-1];
                else s[n-i-1]=s[i];
            }
            else{
                cout<<-1;
                return;
            }
        }
        else if(s[i]=='?')
            s[i]=s[n-i-1]='a';
    }
    if(n%2!=0 && s[n/2]=='?')s[n/2]='a';
    cout<<s;
}


