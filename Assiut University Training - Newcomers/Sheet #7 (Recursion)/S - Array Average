ll ans=0;
void f(int n){
    if(n==0)return;
    ll x;cin>>x;
    ans+=x;
    f(n-1);
}
void solve(){
ll n;cin>>n;
f(n);
cout<<fixed<<setprecision(6)<<(1.0*ans)/n;
 }

