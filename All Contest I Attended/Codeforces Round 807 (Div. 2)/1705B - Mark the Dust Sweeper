void solve()
{
    int n;
    cin >> n;
    vector<int> a(n);
    for (auto &x : a)
        cin >> x;
    ll ans = 0, ptr = 0;
    while (ptr < n && a[ptr] == 0)
        ptr++;
    for (int i = ptr; i < n - 1; i++)
    {
        ans += a[i];
        if (a[i] == 0)
            ans++;
    }
    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
