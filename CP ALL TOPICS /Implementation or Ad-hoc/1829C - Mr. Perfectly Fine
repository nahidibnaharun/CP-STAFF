void solve(){
int n;cin>>n;
map<string , int>mp;
mp["00"]=mp["01"]=mp["10"]=mp["11"]=1e9;
int ans=1e9;
for(int i=0;i<n;++i){
    int x;cin>>x;string s;cin>>s;mp[s]=min(mp[s],x);
}
if(min(mp["11"],mp["10"]+mp["01"])>(int)1e6)cout<<-1;
else cout<<min(mp["11"],mp["10"]+mp["01"]);
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }    
return 0;
}
