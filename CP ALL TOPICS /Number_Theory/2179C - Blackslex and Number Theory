#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const ll INF = 1e9 + 7;
const int SIZE = 1e5;
const int MOD = 998244353;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{
	int n;
	cin >> n;
	vector<ll> a(n);
	for (auto &x : a)
		cin >> x;
	ll mn = *min_element(a.begin(), a.end());
	ll minm = LLONG_MAX;
	bool chk = true;
	for (auto &x : a)
	{
		if (x == mn)
			continue;
		ll d = x - mn;
		if (d <= mn)
		{
			chk = false;
			break;
		}
		minm = min(minm, d);
	}
	if (!chk)
		cout << mn;
	else
		cout << minm;
}

int main()
{
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);

	ll Test_Case;
	cin >> Test_Case;
	while (Test_Case--)
	{
		solve();
		cout << endl;
	}

	return 0;
}
