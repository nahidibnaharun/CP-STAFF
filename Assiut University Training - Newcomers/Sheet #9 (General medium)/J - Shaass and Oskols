void solve(){
    int n;
    cin>>n;
    vector<int> birds(n);
    for(auto &x : birds )cin >> x;

    int t;
    cin >> t;
    while( t-- ){
        int x , y;
        cin >> x >> y;
        x-- ;
        if(x==0){
            birds[x+1] += birds[x] - y;
            birds[x] = 0;
        }
        else if(x == n-1){
            birds[x-1] += y - 1;
            birds[x] = 0;
        }
        else{
            birds[x+1] += birds[x] - y;
            birds[x-1] += y - 1;
            birds[x] = 0;
        }
        // cout << birds[x-1] <<" "<< birds[x] <<" "<< birds[x+1] <<endl;
    }

for(auto &x : birds)cout << x << endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // ll t;cin>>t;
    // while(t--){
        solve();
    //     cout<<endl;
    // }
return 0;
}
