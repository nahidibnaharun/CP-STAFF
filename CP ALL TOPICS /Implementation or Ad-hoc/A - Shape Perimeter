*/
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    // freopen("shell.in", "r", stdin); 
    // freopen("shell.out", "w", stdout); 
	int t;
	cin>>t;
	while(t--){
		int a,m,ans=0;
		cin>>a>>m;
		for(int i=1;i<=a;i++){
			int b,c;
			cin>>b>>c;
			if(i!=1)
			ans+=4*m-2*(2*m-b-c);
			else ans+=4*m;
		}
		cout<<ans<<endl;
	}
	
	return 0;
}
