bool check(const vector<int> &x, const vector<int> &y, int n, int k)
{
    for (int i = 0; i < n; i++)
    {
        if (x[i] <= y[(i + k) % n])
        {
            return false;
        }
    }
    return true;
}
void solve()
{

    int n;
    cin >> n;

    vector<int> a(n), b(n), c(n);
    for (int i = 0; i < n; i++)
        cin >> a[i];
    for (int i = 0; i < n; i++)
        cin >> b[i];
    for (int i = 0; i < n; i++)
        cin >> c[i];

    ll k1 = 0, k2 = 0;

    for (int i = 0; i < n; i++)
    {
        if (check(b, a, n, i))
            k1++;
        if (check(c, b, n, i))
            k2++;
    }

    cout << k1 * k2 * n;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
