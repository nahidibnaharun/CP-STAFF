#include <bits/stdc++.h>
#define endl '\n'

using namespace std;
using ll = long long int;

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);

	int tt; cin >> tt;
	while (tt--) {
		int n, m; cin >> n >> m;
		set<int> se;
		int ldsf;
		for (int i = 0; i < n; i++) {
			cin >> ldsf;
			se.insert(ldsf);
		}

		vector<pair<int, pair<int, int>>> v;
		for (int i = 0; i < m; i++) {
			int x, y, z; cin >> x >> y >> z;
			v.push_back(make_pair(x, make_pair(y, z)));
		}

		int flag = 1;
		vector<bool> vis(v.size());
		while (flag) {
			flag = 0;
			for (int i = 0; i < v.size(); i++) {
				if (vis[i]) {
					continue;
				}

				if (se.count(v[i].first) && se.count(v[i].second.first)) {
					se.insert(v[i].second.second);
					vis[i] = 1;
					flag = 1;
				}
			}
		}

		cout << se.size() << '\n';
	}

	return 0;
}
