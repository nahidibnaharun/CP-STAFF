void solve(){
   string s; cin >> s; int n = s.size();
    bool ok=1;
    for(int i=0;i<n/2;++i){ int j=n-1-i;
        if(s[i]=='?'&&s[j]=='?') s[i]=s[j]='a';
        else if(s[i]=='?') s[i]=s[j];
        else if(s[j]=='?')s[j] = s[i];
        else if(s[i]!=s[j]){
        ok = false; break;
        }
    }
    if(n%2==1&&s[n/2]=='?')s[n/2]='a';
    if(ok)cout<<s;
    else cout<<-1;

}
int main(){
    ios_base::sync_with_stdio(false);
