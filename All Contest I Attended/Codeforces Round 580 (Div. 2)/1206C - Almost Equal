void solve()
{
    int n;
    cin >> n;

    if (n % 2 == 0)
    {
        cout << "NO";
        return;
    }

    cout << "YES" << endl;

    vector<int> a(2 * n + 1);

    for (int i = 1; i <= n; i++)
    {
        if (i % 2 == 1)
        {
            a[i] = 2 * i;
            a[i + n] = 2 * i - 1;
        }
        else
        {
            a[i] = 2 * i - 1;
            a[i + n] = 2 * i;
        }
    }

    for (int i = 1; i <= 2 * n; i++)
    {
        cout << a[i] << " ";
    }
}

