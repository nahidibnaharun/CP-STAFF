void solve()
{
ll k, n, a, b;
		cin >> k >> n >> a >> b;
		k -= n * a;
		if (k > 0) {
			cout << n;
		} else {
			k = -k;
			++k;
			ll par = a - b;
			ll cha = (k + par - 1) / par;
			if (cha > n) {
				cout << -1 ;
			} else {
				cout << n - cha ;
			}
		}
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
    // seive();
    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
