#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const ll INF = 1e17;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
  int n;cin>>n;
  string s;cin>>s;
  int ans=0;
  for(int i=0;i<n-2;i++){
    if(s[i]=='0'){
      if(s[i+1]=='0')ans+=2;
      else if(s[i+1]=='1' && s[i+2]=='0')ans++;
    }
  }
  if(s[n-2]=='0' && s[n-1]=='0')ans+=2;
  cout<<ans;
 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
