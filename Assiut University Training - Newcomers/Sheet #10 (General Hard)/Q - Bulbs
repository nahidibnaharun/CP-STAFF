void solve(){
    int n;
    cin >> n;
    int mbm=0,mblu=0;

    for(int i=0;i<n;i++){
        int x;
        cin >>x;
        mbm=max(mbm,x);
        if(mbm==i+1)mblu++;
    }
    cout<<mblu;
   

}


    

