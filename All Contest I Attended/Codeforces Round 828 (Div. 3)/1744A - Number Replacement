void solve() {
    int n;
    cin >> n;
    vector<int> a(n);
    string s;
    for(int i = 0; i < n; i++) cin >> a[i];
    cin >> s;

    for(int i = 0; i < n; i++) {
        for(int j = i + 1; j < n; j++) {
            if(a[i] == a[j] && s[i] != s[j]) {
                cout << "NO";
                return;
            }
        }
    }
    cout << "YES";

}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
  int t; cin >>t;
  while(t--){
    solve();
    cout<<endl;
  }
return 0;
}
