#include <bits/stdc++.h>

using namespace std;

using ll = long long;

/*

ID: mdnahidibnaharun

LANG: C++

TASK: practice

*/

void solve() {
int n,ans=0;
cin>>n;
int ar[26]={0};
string s;
cin>>s;
for(int i=0;i<s.length();i++)
ar[s[i]-'A']++;
for(int i=0;i<26;i++)
if(ar[i]>i)ans++;
cout<<ans<<endl;
return ;
}

int main() {
 int n;
 cin>>n;
 while(n--)
   solve();
 

  return 0;
}
