
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 200007;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{
    int n;
    ll k;
    cin >> n >> k;

    vector<ll> a(n);
    for (int i = 0; i < n; i++)
        cin >> a[i];

    sort(a.begin(), a.end(), greater<ll>());

    ll lst = a.back(), cnt = 1;
    a.pop_back();

    while (!a.empty() && a.back() == lst)
    {
        a.pop_back();
        cnt++;
    }

    while (!a.empty())
    {
        ll delta = a.back() - lst;
        if (k < delta * cnt)
            break;

        k -= delta * cnt;
        lst = a.back();

        while (!a.empty() && a.back() == lst)
        {
            a.pop_back();
            cnt++;
        }
    }

    lst += k / cnt;
    k %= cnt;
    cnt -= k;

    cout << lst * n - cnt + 1;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
