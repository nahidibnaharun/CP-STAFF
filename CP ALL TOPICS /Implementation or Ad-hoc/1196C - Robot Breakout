#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int MOD = (int)(1e9) + 7;
const int MAX = 1e5;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/


void solve(){
    int n;
    cin >> n;
    int mnx = -MAX , mxx = MAX, mny = -MAX , mxy = MAX;
    
    while(n--){
        int x, y, f1, f2, f3, f4;
        cin >> x >> y >> f1 >> f2 >> f3 >> f4;
        
        if (!f1) mnx = max(mnx, x);
        if (!f2) mxy = min(mxy, y);
        if (!f3) mxx = min(mxx, x);
        if (!f4) mny = max(mny, y);
    }
    
    if (mnx <= mxx && mny <= mxy)
        cout << "1 " << mnx << " " << mny;
    else
        cout << "0";


}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
