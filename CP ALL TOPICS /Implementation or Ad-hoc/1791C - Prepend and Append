void solve(){
int n;cin>>n;
string s;cin>>s;
for(int i=0,j=n-1;i<=j;i++,j--){
    if(s[i]!=s[j])
        n-=2;
    else break;
}
cout<<((n<0)?0:n);
cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
    int t;cin>>t;
    while(t--)
    solve(); 
}


