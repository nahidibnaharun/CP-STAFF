void solve(){
 int n,q,m;cin>>n>>q>>m;
 vector<ll>ar(n+1);
 for(int i=1;i<=n;i++)cin>>ar[i];
 vector<ll>df(n+2,0);
 for(int i=0;i<q;i++){
    int l,r;ll d;cin>>l>>r>>d;
    df[l]+=d;
    df[r+1]-=d;
 }
 ll cr=0;
 vector<ll>fa;
 fa.reserve(n);
 for(int i=1;i<=n;i++){
    cr+=df[i];
    fa.push_back(ar[i]+cr);
 }
 sort(fa.rbegin(),fa.rend());
 for(int i=0;i<m;i++){
    int k;cin>>k;
    cout<<fa[k-1]<<endl;
 }
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
//   int t;cin>>t;
//   while(t--){
  solve();
//   cout<<endl;
//   }
}
