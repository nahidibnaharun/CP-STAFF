#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1e9 + 7;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{

    int n, k;
    cin >> n >> k;
    vector<int> a(n);
    bool check = false;
    for (auto &x : a)
    {
        cin >> x;
        if (x % k == 0)
            check = true;
    }
    if (check)
    {
        cout << 0;
        return;
    }
    int ans = INT_MAX;

    for (auto x : a)
    {
        ans = min(ans, k - x % k);
    }
    if (k == 4)
    {
        int tw = 0;
        for (auto x : a)
        {
            if (x % 2 == 0)
                tw++;
        }
        if (tw >= 2)
        {
            cout << 0;
            return;
        }
        int op = 0;
        k = 2;
        for (auto x : a)
        {
            if (tw >= 2)
            {
                break;
            }
            if ((x + 1) % 2 == 0)
            {
                op++;
                tw++;
            }
        }
        ans = min(ans, op);
    }
    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
