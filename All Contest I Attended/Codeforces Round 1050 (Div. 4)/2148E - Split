#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int MAX_A = 200005;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
     int n, k;
    cin >> n >> k;
    vector<int> a(n);
    vector<ll> cnt(n + 1, 0), ct(n + 1, 0); 
    for (int i = 0; i < n; i++) {
        cin >> a[i];
        cnt[a[i]]++;
    }
    for (int i = 0; i <= n; i++) {
        if (cnt[i] % k) {
            cout << 0 <<endl;
            return;
        }
        cnt[i] /= k;
    }
    ll res = 0;
    for (int l = 0, r = 0; r < n; r++) {
        ct[a[r]]++;
        while (ct[a[r]] > cnt[a[r]]) {
            ct[a[l]]--;
            l++;
        }
        res += (r - l + 1);
    }
    cout << res <<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        // cout<<endl;
    }
return 0;
}
