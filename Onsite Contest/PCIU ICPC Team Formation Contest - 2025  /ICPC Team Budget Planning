void solve() {
ll n,b;
cin >> n>>b;
ll ans=0;
vector<ll>a(n);
for(auto &x:a)cin >>x;

sort(a.begin(),a.end());

for(int i=0;i<n; i = i+3){
    if(a[i+2]<=b && i+2<n){
        ans++;
        b-=a[i+2];
    }
    else break;
}
cout<<ans;
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

