void solve(){
    ll c,d;cin>>c>>d;
    ll a=min(c,d),b=max(c,d);
    ll x=(a%2==0?a:a+1);
    ll y=(b%2==0?b:b-1);
    ll ans=(y-x)/2 +1;
    ans = (2*x + (ans-1)*2)*ans;
    ans = ans/2;
    a=a-1;
    if((b-a)%2==0){
        ll cd=(b-a)/2;
        cout<<(cd)*(b+a+1)<<endl;
    }
    else{
        ll cd=(b+a+1)/2;
        cout<<(cd)*(b-a)<<endl;
    }a++;
    cout<<ans<<endl;
    x = (a%2==0?a+1:a);
    y = (b%2==0?b-1:b);
    ans=(y-x)/2 +1;
    ans = (2*x + (ans-1)*2)*ans;
    ans = ans/2;
    a=a-1;
    cout<<ans;

}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
