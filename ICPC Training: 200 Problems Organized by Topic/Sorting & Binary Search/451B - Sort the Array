void solve()
{
    int n;
    cin >> n;
    vector<int> a(n), b(n);
    for (int i = 0; i < n; i++)
    {
        cin >> a[i];
        b[i] = a[i];
    }

    sort(b.begin(), b.end());
    int stat = -1, end = -1;
    for (int i = 0; i < n; i++)
    {
        if (a[i] != b[i])
        {
            stat = i;
            break;
        }
    }
    for (int i = n - 1; i >= 0; i--)
    {
        if (a[i] != b[i])
        {
            end = i;
            break;
        }
    }
    if (stat == -1 && end == -1)
    {
        cout << "yes" << endl
             << "1 1";
        return;
    }
    reverse(a.begin() + stat, a.begin() + end + 1);
    for (int i = 0; i < n; i++)
    {
        if (a[i] != b[i])
        {
            cout << "no";
            return;
        }
    }
    cout << "yes" << endl
         << stat + 1 << " " << end + 1;
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t = 1;

    for (int i = 1; i <= t; i++)
    {
        solve();
        cout << endl;
    }

    return 0;
}
