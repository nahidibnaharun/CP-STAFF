void solve(){
int n;cin>>n;
string s;cin>>s;
int cnt=0;
for(int i=0;i<n;i++){
    int x=0;
    while(s[i]=='x' && i<n){
        x++;
        i++;
    }
    if(x>=3)
    cnt+=(x-2);
}
cout<<cnt;

cout<<endl;
}


int main(){
    ios_base::sync_with_stdio(false);
