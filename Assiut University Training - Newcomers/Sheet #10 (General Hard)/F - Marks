void solve(){

int n,a;
    cin>>n>>a;
    vector<string> b;
   for(int i=0;i<n;i++){
     string t;
     cin>>t;
     b.push_back(t);
   }
   int c[a]={0};
 for(int i=0;i<n;i++){
    string t= b[i];
     for(int j=0;j<a;j++){
     int af= t[j];
     
     c[j]=max(c[j],af);
     }
 }
 int cnt=0;
 
for(int i=0;i<n;i++){
    string t= b[i];
     for(int j=0;j<a;j++){
         int af= t[j];
     if(c[j]==af) {cnt++;
     break;
     }
     }
 }
 cout<<cnt;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
