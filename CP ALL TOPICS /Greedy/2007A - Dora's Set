void solve()
{

    ll l, r;
    cin >> l >> r;
    cout << (((r + 1) / 2 - l / 2) / 2);
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
