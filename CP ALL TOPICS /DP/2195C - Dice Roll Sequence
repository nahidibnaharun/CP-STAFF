#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 10000;
const ll MAXN = 2e5 + 5;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{
    int n;
    cin >> n;

    vector<int> a(n);
    for (auto &i : a)
    {
        cin >> i;
        i--;
    }

    vector<int> dp(6, 0);

    for (int i = 0; i < n; i++)
    {
        vector<int> new_dp(6, INF);

        for (int j = 0; j < 6; j++)
        {
            for (int k = 0; k < 6; k++)
            {
                if (j == k || j == 5 - k)
                    continue;

                new_dp[j] = min(new_dp[j], dp[k] + (a[i] != j));
            }
        }

        dp = new_dp;
    }

    cout << *min_element(dp.begin(), dp.end());
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
