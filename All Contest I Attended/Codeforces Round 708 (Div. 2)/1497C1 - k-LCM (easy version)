
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 1e5 + 7;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/
void solve()
{
    int n, k;
    cin >> n >> k;

    if (n & 1)
    {
        cout << 1 << " " << n / 2 << " " << n / 2 << endl;
    }
    else if (n % 2 == 0 && n % 4 != 0)
    {
        cout << 2 << " " << n / 2 - 1 << " " << n / 2 - 1 << endl;
    }
    else
    {
        cout << n / 2 << " " << n / 4 << " " << n / 4 << endl;
    }
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }
    return 0;
}
