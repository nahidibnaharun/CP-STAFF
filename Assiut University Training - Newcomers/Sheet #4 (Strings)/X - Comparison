void solve(){
string s;cin>>s;
int n=s.size();
string com=s;
if(n==1){
    cout<<s;return;
}
com+='z';
for(int i=1;i<n;i++){
string x=s.substr(0,i), y = s.substr(i);
sort(x.begin(),x.end());
sort(y.begin(),y.end());
string nw=x+y;
if(nw<com)com=nw;
}
cout<<com;
}
