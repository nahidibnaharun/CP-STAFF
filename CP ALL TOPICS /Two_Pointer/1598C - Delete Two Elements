
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 300005;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{
    int n;
    cin >> n;

    vector<ll> a(n);
    map<ll, ll> cnt;

    for (int i = 0; i < n; i++)
    {
        cin >> a[i];
        cnt[a[i]]++;
    }

    ll sum = 0;
    for (ll x : a)
        sum += x;

    if ((2 * sum) % n != 0)
    {
        cout << 0;
        return;
    }

    ll need = (2 * sum) / n;
    ll ans = 0;

    for (int i = 0; i < n; i++)
    {
        ll a1 = a[i];
        ll a2 = need - a1;

        if (cnt.count(a2))
            ans += cnt[a2];

        if (a1 == a2)
            ans--;
    }

    cout << ans / 2;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
