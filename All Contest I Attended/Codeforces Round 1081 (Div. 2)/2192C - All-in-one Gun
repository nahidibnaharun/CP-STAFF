#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 10000;
const ll MAXN = 2e5 + 5;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{
    ll n, h, k;
    cin >> n >> h >> k;

    vector<ll> a(n), p(n);

    for (ll i = 0; i < n; i++)
    {
        cin >> a[i];
        p[i] = a[i];
        if (i > 0)
            p[i] += p[i - 1];
    }

    ll sum = p[n - 1];
    ll cnt = (h - 1) / sum;
    ll time = n * cnt + k * cnt;

    h -= cnt * sum;

    if (h <= 0)
    {
        cout << time << endl;
        return;
    }

    vector<ll> r(n);
    r[n - 1] = a[n - 1];
    for (ll i = n - 2; i >= 0; i--)
        r[i] = max(r[i + 1], a[i]);

    ll l = a[0];
    for (ll i = 0; i < n; i++)
    {
        l = min(l, a[i]);
        ll curr = p[i] - l + r[i + 1];

        if (h <= curr || h <= p[i])
        {
            cout << time + i + 1 <<endl;
            return;
        }
    }
}
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        // cout << endl;
    }
    return 0;
}
