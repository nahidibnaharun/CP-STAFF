#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1000000007;
/*
//     
         _   _  __    _   _  _____   _____
//     / | / / / _ \ \ \__\ \\__  _\\  _   \ 
//    /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \ 
//   / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
//  /_/ |_/ /_/     \__\\_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve() {
     int n, x = 0, ans = -1, p = 0, k = 0;
    char ch;
    string s;
    cin >> n >> ch >> s;

    bool f = 0, f1 = 1;
    for (int i = 0; i < s.size(); i++) {
        if (s[i] == ch && !f) {
            x = i;
            f = 1;
        }
        if (f && s[i] == 'g') {
            ans = max(ans, i - x);
            f = 0;
        }
        if (f1 && s[i] == 'g') {
            f1 = 0;
            k = i;
        }
    }

    if (f) {
        ans = max(ans, n - x + k);
    }

    cout << ans ;

}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
  int t; cin >>t;
  while(t--){
    solve();
    cout<<endl;
  }
return 0;
}
