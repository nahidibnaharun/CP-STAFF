#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int MOD = (int)(1e9) + 7;
const int MAX = 1e7 + 5;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
      int n, k; 
    cin >> n >> k;
    vector<int> a(n);
    for(auto &x : a) cin >> x;

    vector<int> sorted = a;
    sort(sorted.begin(), sorted.end());

    unordered_map<int, int> pos;
    for (int i = 0; i < n; i++) pos[sorted[i]] = i;

    int groups = 1;
    for (int i = 1; i < n; i++) {
        if (pos[a[i]] != pos[a[i-1]] + 1) groups++;
    }

    cout << (groups <= k ? "YES" : "NO");
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
