#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
static const int INF = 1000000000;
const ll M=1e9+1;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
 
 string s;cin>>s;
 ll cnt=0,x=0;
 for(auto &y:s){
    if(y=='1')x=1;
    else if(x)cnt++;
 }
 x=s.length();
 while(x--){
    if(s[x]=='1')break;
    else cnt--;
 }
 x=0;
 cout<<max(cnt,x);

cout<<endl;

    // cout<<endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--)
    solve();
}
