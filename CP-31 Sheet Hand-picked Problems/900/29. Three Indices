void solve()
{
    int n;
    cin >> n;
    vector<int> a(n);
    for (auto &x : a)
        cin >> x;

    for (int i = 0; i < n-2; i++)
    {
        if (a[i] < a[i + 1] && a[i + 1] > a[i + 2])
        {
            cout << "YES" << endl
                 << i + 1 << " " << i + 2 << " " << i + 3;
            return;
        }
    }
    cout << "NO";
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
