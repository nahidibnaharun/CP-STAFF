void solve(){
    int f,s,l,r,ans=0;cin>>f>>s>>l>>r;
    vector<pair<int,int>>fx,sx;
    for(int i=0;i<f;++i){
        int x,y;cin>>x>>y;fx.push_back({x,y});
    }
    for(int i=0;i<s;++i){
        int x,y;cin>>x>>y;sx.push_back({x,y});
    }
    for(int x=l;x<=r;++x){
        for(int i=0,j=0; i<f && j<s;){
            int a=fx[i].first,b=fx[i].second,c=sx[j].first+x,d=sx[j].second+x;
            if(max(a,c)<=min(b,d)){
                ans++;break;
            }
            else if(d<a)j++;
            else i++;
        }
    }
    cout<<ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
    // while(t--){
        solve();
    //     cout<<endl;
    // }    
return 0;
}
