int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
     // freopen("gymnastics.in", "r", stdin); 
    // freopen("gymnastics.out", "w", stdout); 
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        string s;
        cin>>s;
        int m=0;
        if(s[0]=='1')m++;
        for(int i=0;i<n-1;i++)if(s[i]!=s[i+1])m++;
        cout<<m<<endl;
    }

}
