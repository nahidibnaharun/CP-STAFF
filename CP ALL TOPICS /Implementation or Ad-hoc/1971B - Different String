void solve() {
    string s;cin>>s;
    bool ans=false;
    for(int i=1;i<(int)(s.length());i++){
        if(s[i]!=s[0]){swap(s[i],s[0]);ans=true;break;};
    }
    if(!ans){cout<<"NO";return;};
    cout<<"YES"<<endl<<s;
    return;

}


int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL); 
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
    
    return 0;   
}
