#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1e9 + 7;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{

    int n;
    cin >> n;

    vector<int> a(n), b(n);
    for (int &x : a)
        cin >> x;
    for (int &x : b)
        cin >> x;

    vector<int> bestA(2 * n + 1, 0), bestB(2 * n + 1, 0);

    for (int i = 0; i < n;)
    {
        int j = i;
        while (j < n && a[j] == a[i])
            j++;
        bestA[a[i]] = max(bestA[a[i]], j - i);
        i = j;
    }

    for (int i = 0; i < n;)
    {
        int j = i;
        while (j < n && b[j] == b[i])
            j++;
        bestB[b[i]] = max(bestB[b[i]], j - i);
        i = j;
    }

    int ans = 0;
    for (int x = 1; x <= 2 * n; x++)
    {
        ans = max(ans, bestA[x] + bestB[x]);
    }

    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
