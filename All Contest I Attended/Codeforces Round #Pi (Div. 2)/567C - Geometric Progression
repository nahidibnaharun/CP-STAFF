void solve(){
    int n;ll k;cin>>n>>k;
    vector<ll>a(n);for(auto &x:a)cin>>x;
    vector<ll>cnm(n,0);
    unordered_map<ll,int>lc,rc;
    ll ttl=0;
    for(int i=0;i<n;++i)rc[a[i]]++;
    for(int i=0;i<n;++i){
        rc[a[i]]--;
        if(rc[a[i]]==0)rc.erase(a[i]);
        if(a[i]%k==0){
            ll vip=a[i]/k;
            if(lc.count(vip)){
                ll vin=a[i]*k;
                if(rc.count(vin))ttl+=(ll)lc[vip]*rc[vin];
            
            }
        }
        lc[a[i]]++;
    }
cout<<ttl;
 }
   
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
