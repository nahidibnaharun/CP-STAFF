void solve(){
    int r , x , d , n ; cin >> r >> x >> d >> n;

    string s ; cin >> s;
    int cnt = 0;
    for(auto c : s){
        if( c == '1' ){
            if(r >= x) r-=d;
            cnt++;
        }
        else{
            if( r<x )cnt++;
        }
    }
    cout << cnt;
}
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    
    ll Test_Case; cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout << endl;
    }
    
    
    return 0;   
}
