void solve()
{
    string s;
    cin >> s;
    int n = s.length();
    for (int i = 0; i < n;)
    {
        if (s[i] == 'k')
        {
            int cnt = 0;
            int j = i;
            while (j < n && s[j] == 'k')
            {
                cnt++;
                j++;
            }

            if (cnt > 1)
            {
                cout << "k{" << cnt << "}";
            }
            else
                cout << "k";

            i = j;
        }
        else
        {
            cout << s[i];
            i++;
        }
    }
}

