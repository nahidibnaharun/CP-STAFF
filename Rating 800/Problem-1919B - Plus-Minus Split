void solve() {
int n;
cin>>n;
string s;
cin>>s;
int p=0,m=0;
for(int i=0;i<n;i++)
(s[i]=='+')?p++:m++;

cout<<max(m,p)-min(m,p)<<endl;
return ;

}

int main() {
 int n;
 cin>>n;
 while(n--)
   solve();
 

  return 0;
}
