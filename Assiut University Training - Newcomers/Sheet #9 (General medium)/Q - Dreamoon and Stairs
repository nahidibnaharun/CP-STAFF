 void solve(){
    int n,m;cin>>n>>m;
    int l=(n+1)/2;
    int ans=(l+m-1)/m*m;
    if(ans>n)cout<<-1;
    else cout<<ans;
    cout<<endl;
 }
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    // int t;cin>>t;
