ll binpow(ll a, ll b)
{
    ll res = 1;
    while (b > 0)
    {
        if (b & 1)
            res = res * a;
        a = a * a;
        b >>= 1;
    }
    return res;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    cin >> n;

    ll ans = 0;

    for (int s = 1; s <= n - 1; s++)
    {
        int lenL = s - 1;
        int lenR = n - 1 - s;

        ll left = (lenL == 0 ? 1 : 3 * binpow(4, lenL - 1));
        ll right = (lenR == 0 ? 1 : 3 * binpow(4, lenR - 1));

        ans += left * right;
    }

    ans *= 4;

    cout << ans;
    return 0;
}
