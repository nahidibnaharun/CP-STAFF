int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    // freopen("shell.in", "r", stdin); 
    // freopen("shell.out", "w", stdout); 
	ll a,ans;
	cin>>a;
	for(ll b=1;b<22;b++){
		if(a%b==0){
			a=a/b;
		}
		else{
			ans=b;
			break;
		}
	}
	cout<<--ans;
	
	return 0;
}
