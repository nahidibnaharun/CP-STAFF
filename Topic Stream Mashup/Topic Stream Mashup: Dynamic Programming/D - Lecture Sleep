void solve(){
int n,k;cin>>n>>k;
int ps1[n+1]={0},ps2[n+1]={0};
ll v[n],t[n];
for(int i=0;i<n;++i)cin>>v[i];
for(int i=0;i<n;++i)cin>>t[i];
for(int i=0;i<n;++i){
    if(t[i]==1)ps1[i+1]=v[i];
    ps2[i+1]=v[i];
}

for(int i=1;i<=n;++i){ps1[i]+=ps1[i-1];ps2[i]+=ps2[i-1];}

ll mx=LLONG_MIN;
for(int i=0;i<n-k+1;++i){
ll th=ps2[i+k]-ps2[i] + ps1[n]-( ps1[i+k]-ps1[i]);
mx=max(mx,th);
}
cout<<mx;

 }
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
    // while(t--){
        solve();
        // cout<<endl;
    // }
return 0;
}
