#include <bits/stdc++.h>
#define endl '\n'

using namespace std;
using ll = long long int;

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);

	ll n, b; cin >> n >> b;
	vector<int> a(n);
	int negmax = 1e9 + 100, f = 0;
	for (int i = 1; i < n; i++) {
		cin >> a[i];
		if (a[i] < 0) {
			negmax = min(negmax, abs(a[i]));
		}
		else {
			f = 1;
			b += a[i];
		}
	}

	if (f == 1) {
		cout << b << "\n";
	}
	else {
		if (negmax > b) {
			cout << -1 << "\n";
		}
		else {
			cout << b - negmax << '\n';
		}
	}


	return 0;
}
