void solve(){
vector<int>ar;
char x;
while(cin>>x){
if(x!='+')ar.push_back(x-'0');
}
sort(ar.begin(),ar.end());
for(int i=0;i<ar.size();i++){
    cout<<ar[i];
    if(i!=ar.size()-1)cout<<'+';
}
}
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL); 
    // int t;
    // cin>>t;
    // while(t--)
    solve();
    return 0;   
}
