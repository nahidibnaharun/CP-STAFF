#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
// const int INF=500;
const ll INF = 2e5+5;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
int n;cin>>n;vector<vector<int>>a(n+1);
for(int i=0;i<n-1;i++){
    int m,n;cin>>m>>n;a[m].push_back(n);a[n].push_back(m);
}
if(n==2){cout<<0;return;}
int lv=0;vector<int>chk(n+1,0);
for(int i=1;i<=n;i++){
    if((int)a[i].size()==1){chk[i]=1;++lv;}
}
int ans=0;
for(int i=1;i<=n;++i){
    int ct=0;
    for(int x:a[i])if(chk[x])++ct;
    ans=max(ans,ct);
}
cout<<lv-ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }    
return 0;
}
