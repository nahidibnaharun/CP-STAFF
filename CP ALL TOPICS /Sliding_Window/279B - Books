void solve() {
  ll n , k ;cin >> n>> k;
  bool chk=false;
  vector<ll>a(n);
  for(auto &x:a)cin >>x;

  ll ans=1;

  ll left=1,right=2;

 vector<ll>ps(n+1,0);

 for(int i=1;i<=n;i++){
    ps[i]=ps[i-1]+a[i-1];
    if(a[i-1]<=k)chk=true;
    
 }
 if(!chk){
    cout<<0;return;
 }



  for(;right<=n && left<=n;){
    if(ps[right] - ps[left-1] <=k){
    ans = max(ans, right-left+1);
    right++;
    }
    else{
        left++;
    }

  }
  cout<<ans;
}

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(nullptr);

  // ll Test_Case; cin >> Test_Case;
  // while (Test_Case--) {
  solve();
  // cout<<endl;
  // }

  return 0;
}
