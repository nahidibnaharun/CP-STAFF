#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int SIZE = 1e5 + 5;

int x[SIZE], y[SIZE], a[SIZE], degree[SIZE];
int n, m;

void solve()
{
    cin >> n >> m;

    for (int i = 1; i <= n; i++)
    {
        cin >> a[i];
        degree[i] = 0;
    }

    for (int i = 1; i <= m; i++)
    {
        cin >> x[i] >> y[i];
        degree[x[i]]++;
        degree[y[i]]++;
    }

    int ans = INF;

    if (m % 2 == 0)
        ans = 0;

    for (int i = 1; i <= n; i++)
    {
        if (degree[i] % 2 == 1)
            ans = min(ans, a[i]);
    }

    for (int i = 1; i <= m; i++)
    {
        if (degree[x[i]] % 2 == 0 && degree[y[i]] % 2 == 0)
            ans = min(ans, a[x[i]] + a[y[i]]);
    }

    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << '\n';
    }

    return 0;
}
