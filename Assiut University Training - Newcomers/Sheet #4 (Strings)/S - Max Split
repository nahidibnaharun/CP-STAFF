void solve(){
string s;cin>>s;
int l=0,r=0;
string cr="";
vector<string>ans;
for(char c:s){
    cr+=c;
    if(c=='L')l++;
    else r++;
    if(l==r){
        ans.push_back(cr);
        cr="";
        l=r=0;
    }
}
cout<<ans.size()<<endl;
for(auto &x:ans){
cout<<x<<endl;
}
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
