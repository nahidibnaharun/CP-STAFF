void solve(){
    int a,b,c;cin>>a>>b>>c;
    if( a+b>c && a+c>b && b+c>a){
    cout<<"Valid"<<endl;
    double s=(a+b+c)/2.0,ans = sqrt(s*(s-a)*(s-b)*(s-c)*1.0);
    cout<<fixed<<setprecision(6)<<ans;
    }
    else cout<<"Invalid";
}

