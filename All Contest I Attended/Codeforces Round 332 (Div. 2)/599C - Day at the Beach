#include <bits/stdc++.h>
using namespace std;
using ll = long long;

void solve(){
int n;cin>>n;vector<int>h(n);
for(auto &x:h)cin>>x;
vector<int>mn(n+1);mn[n-1]=h[n-1];
for(int i=n-2;i>=0;i--)mn[i]=min(mn[i+1],h[i]);
int cnt=0;
for(int i=0;i<n;i++){
    int mx=h[i];
    while(i<n && mx>mn[i+1]){
        if(i==(n-1))break;
        i++;mx=max(mx,h[i]);
    }cnt++;
}cout<<cnt<<endl;
}
int main(){
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    // int t;cin>>t;
    // while(t--){
        solve();
    //     cout<<endl;
    // }
    return 0;
}
