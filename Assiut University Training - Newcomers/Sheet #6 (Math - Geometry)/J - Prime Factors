void solve(){
    ll n;cin>>n;
    bool first =true;
    for(ll i=2;i*i<=n;++i){
        int cnt=0;
        while(n%i==0){
            n/=i;
            cnt++;
        }
        if(cnt>0){
            if(!first)cout<<"*";
            cout<<"("<<i<<"^"<<cnt<<")";
            first=false;
        }
    }
    if(n>1){
        if(!first)cout<<"*";
        cout<<"("<<n<<"^1)";
    }
    cout<<endl;
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
