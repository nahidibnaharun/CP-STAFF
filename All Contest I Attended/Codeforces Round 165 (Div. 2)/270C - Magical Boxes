#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 1e7 + 10;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

struct Element
{
    ll k, nr;
    bool operator<(const Element &other) const
    {
        return k < other.k;
    }
};

int n;
vector<Element> a;

bool can(ll k, ll x)
{
    ll val = 1;
    for (ll i = 0; i <= k; i++)
    {
        if (val >= x)
            return true;
        if (val > (ll)4e18 / 4)
            break;
        val *= 4;
    }
    return false;
}

bool ok(ll L)
{
    for (int i = n - 1; i >= 0; i--)
    {
        if (!can(L - a[i].k, a[i].nr))
            return false;
    }
    return true;
}

void solve()
{
    cin >> n;
    a.resize(n);

    for (int i = 0; i < n; i++)
        cin >> a[i].k >> a[i].nr;

    sort(a.begin(), a.end());

    ll left = a[n - 1].k + 1;
    ll right = (1LL << 60);
    ll ans = right;

    while (left <= right)
    {
        ll mid = (left + right) >> 1;
        if (ok(mid))
        {
            ans = mid;
            right = mid - 1;
        }
        else
            left = mid + 1;
    }

    cout << ans ;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t = 1;
    while (t--)
    {
        solve();
    }
    return 0;
}
