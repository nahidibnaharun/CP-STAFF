void solve(){
int n;cin>>n;
ll mr=1e18,mxr=-1e18,mc=1e18,mxc=-1e18;
for(int i=0;i<n;++i){
    ll r,c;cin>>r>>c;
    mr=min(mr,r);mxr=max(mxr,r);mc=min(mc,c);mxc=max(mxc,c);
}
ll dr=mxr-mr,dc=mxc-mc;
ll ans=max((dr+1)/2,(dc+1)/2);
cout<<ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
    // while(t--){
        solve();
        // cout<<endl;
    // }
return 0;
}
