#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ui = unsigned int;
const int INF = 1e9;
const int MOD = 1000000007;
/*
//     
         _   _  __    _   _  _____   _____
//     / | / / / _ \ \ \__\ \\__  _\\  _   \ 
//    /  |/ / / /_\ \ \  __  \  \ \  \ \ \  \ 
//   / /|  / / ____  \ \ \  \ _\_\ \__\ \/  /
//  /_/ |_/ /_/     \__\\_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){
    ll n,m;
    cin >>n>>m;
    vector<ll>a(m+1,0);
    for(ll i=1 ;i<=m ;i++)cin>>a[i];
    
    ll ans=n-a[m]+1;
    for(ll i=2 ;i<=m ;i++)
        if(a[i]==1)ans=1;

        cout<<ans;
}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   
   int t;
   cin >>t;
   while(t--){
    solve();
    cout<<endl;
   }
return 0;
}
