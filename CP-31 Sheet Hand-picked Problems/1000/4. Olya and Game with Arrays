#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1e9 + 7;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{
    int n;
    cin >> n;

    vector<vector<ll>> a(n);

    for (int i = 0; i < n; i++)
    {
        int x;
        cin >> x;
        for (int j = 0; j < x; j++)
        {
            ll l;
            cin >> l;
            a[i].push_back(l);
        }
    }

    for (int i = 0; i < n; i++)
    {
        sort(a[i].begin(), a[i].end());
    }

    vector<ll> big;
    ll small = LLONG_MAX, ans = 0, mi = LLONG_MAX;

    for (int i = 0; i < n; i++)
    {
        big.push_back(a[i][1]);
        ans += a[i][1];
        mi = min(mi, a[i][1]);
        small = min(small, a[i][0]);
    }

    cout << ans - mi + small;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
