void solve(){
ll n,m,cnt=0;
    cin>>n>>m;
    ll x=max(n,m);
    for(int i=0;i<=x;i++)for(int j=0;j<=x;j++)if((i*i)+j==n&&i+(j*j)==m)cnt++;
    cout<<cnt<< endl;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
  // int t;cin>>t;
  // while(t--)
    solve();
} 
  
