
#include <bits/stdc++.h>
using namespace std;

using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;

const int INF = 1e9;
const int MOD = 1000000007;
const int MAX = 10000;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/
//
// ID: mdnahidibnaharun
// LANG: C++
// TASK: practice
*/

void solve()
{

    int n, x, y;
    cin >> n >> x >> y;

    vector<int> v(n);
    ll sum = 0;

    for (int i = 0; i < n; i++)
    {
        cin >> v[i];
        sum += 1LL * y * (v[i] / x);
    }

    ll ans = 0;

    for (int i = 0; i < n; i++)
    {
        ans = max(ans, 1LL * v[i] + (sum - 1LL * y * (v[i] / x)));
    }

    cout << ans;

}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t ;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
