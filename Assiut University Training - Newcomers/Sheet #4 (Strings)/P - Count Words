void solve(){
string s;getline(cin,s);
int cnt=0;
for(int i=0;i<s.size();i++){
    if(isupper(s[i]) || islower(s[i])){
        cnt++;
        while(isupper(s[i]) || islower(s[i]))i++;
    }

}cout<<cnt;
}
