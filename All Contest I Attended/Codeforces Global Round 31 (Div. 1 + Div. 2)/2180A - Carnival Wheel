void solve()
{

    int l, a, b;
    cin >> l >> a >> b;
    int g = __gcd(l, b);
    int ans = a + ((l - 1 - a) / g) * g;
    cout << ans;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
