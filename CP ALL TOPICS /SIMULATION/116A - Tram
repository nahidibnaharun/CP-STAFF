void solve(){
int n;cin>>n;
int ans=INT_MIN,c=0;
while(n--){
    int a,b;cin>>a>>b;
    c+=b;c-=a;
    
    ans=max(ans,c);
}
cout<<ans;
}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    //  freopen("tracing.in", "r", stdin); 
    // freopen("tracing.out", "w", stdout); 
   // int t;cin>>t;
   // while(t--)
    solve();
} 
