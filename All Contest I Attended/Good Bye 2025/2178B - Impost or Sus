void solve()
{
    string s; cin >> s;
    s = "u" + s + "u";
    int ans = 0;
    for(int i = 1; i < (int) s.length(); i++) {
        if(s[i - 1] == 'u' && s[i] == 'u') {
            s[i] = 's';
            ans++;
        }
    }
    cout << ans ;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
    // seive();
    ll Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
