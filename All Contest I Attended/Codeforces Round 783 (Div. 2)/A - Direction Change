void solve(){
int n,m;cin>>n>>m;
if(n<m)swap(n,m);
if(m==1 && n>=3)cout<<-1;
else cout<<2*n-2-(n+m)%2;

}

int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
