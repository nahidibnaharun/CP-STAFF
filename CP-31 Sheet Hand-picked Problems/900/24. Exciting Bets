#include <bits/stdc++.h>
using namespace std;
using ll = long long;

void solve()
{
    ll a, b;
    cin >> a >> b;

    if (a < b)
        swap(a, b);

    if (a == b + 1)
    {
        cout << 1 << " " << 0;
        return;
    }

    ll x = a - b;
    if (a == b)
        cout << 0 << " " << 0;
    else
        cout << x << " " << min(a % x, x - (a % x));
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int Test_Case;
    cin >> Test_Case;
    while (Test_Case--)
    {
        solve();
        cout << endl;
    }
    return 0;
}
