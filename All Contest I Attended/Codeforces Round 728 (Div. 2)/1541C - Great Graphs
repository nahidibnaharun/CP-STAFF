void solve() {

}
int t,n,d[251666];
int main(){
	scanf("%d",&t);
	while(t--){
		long long ans=0;
		scanf("%d",&n);
		for(int i=1;i<=n;i++) scanf("%d",&d[i]);
		sort(d+1,d+n+1);
		for(int i=1;i<=n;i++){
			ans+=(d[i]-d[i-1])*1LL*(i-1)*(n-i+1);
			ans-=(d[i]-d[i-1]);
		}
		printf("%lld\n",ans*-1);
	}
	return 0;
}
