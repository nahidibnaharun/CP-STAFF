void solve(){
int n;cin>>n;
vector<int>a(n+1);
for(int i=1;i<=n;i++)cin>>a[i];
const int mv=400005;
vector<ll>f(mv,0);
ll sl=0;
for(int i=1;i<=n;i++){
    int tg=i-a[i];
    if(tg>=0 && tg<mv)sl+=f[tg];
    if(i+a[i]<mv)f[i+a[i]]++;
}
cout<<sl;

}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // int t;cin>>t;
    // while(t--){
    solve();
    // cout<<endl;
    // }
}
