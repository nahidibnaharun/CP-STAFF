int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    // freopen("tttt.in", "r", stdin); 
    // freopen("tttt.out", "w", stdout); 
    int n;
    cin>>n;
    while(n--){
        int ans=0;
        string s;
        cin>>s;
        for(int i=0;i<s.length();i++){
            if(s[i]=='1')ans++;
        }
        cout<<ans<<endl;
    }





    

    return 0;
}
