void solve(){
    int n;
    string s;
    cin >> n >> s;
    vector<char>a(n);
    int x,y,z;
    if(n % 2 != 0){
        x = n / 2 - 1 , y = n / 2 + 1; 
        a[x+1] = s[0];
        z = 1;
    }
    else {
        x = n / 2 - 1 , y = n / 2;
        z = 0 ;
    }
        for( int i = z; i < n - 1 ;){
            a[x] = s[i];
            a[y] = s[i+1];
            x--; y++; i+=2;
        }



    for(char l : a)cout<< l ;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
