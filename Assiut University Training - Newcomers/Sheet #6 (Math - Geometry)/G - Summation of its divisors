void solve(){
    ll n;cin>>n;
    ll ans=0;
    for(ll i=1;i*i<=n;i++){
        if(n%i==0){
            if(i!=(n/i))
            ans = ans +i + (n/i);
            else ans+=i;
        }
    }
    cout<<ans;
}
