#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
using ld = long double;
using ui = unsigned int;
const int INF = 1e9;
const int SIZE = 1e5;
const int MOD = 1006903069;
const int MAX = 1e7 + 10;

/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice
*/

void solve()
{
    ll n, m, k;
    cin >> n >> m >> k;
    ll meb = 0, lla = k - 1, rgl = n - k;
    for (ll l = 0; l <= lla; l++)
    {
        ll r1 = min(rgl, l);
        if (l + r1 > 0)
            r1 = min(r1, m + 1 - 2 * l);
        if (r1 >= 0)
            meb = max(meb, l + r1);
        ll r2 = (m + 1 - l) / 2;
        r2 = min(r2, rgl);
        if (r2 > l)
            meb = max(meb, l + r2);
    }
    cout << min(n, meb + 1);
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
        cout << endl;
    }

    return 0;
}
