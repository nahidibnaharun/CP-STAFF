void solve(){
    int n;cin >> n;
    vector<int> a(n);
    for(auto &x: a)cin>>x;
    int fq[1001] = {0};
    for(int i=0;i<n;i++)fq[a[i]]++;

    int mf=*max_element(fq,fq+1001);
    if(mf<=(n+1)/2)cout<<"YES";
    else cout<<"NO";
}
