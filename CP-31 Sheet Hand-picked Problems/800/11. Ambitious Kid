#include <bits/stdc++.h>

using namespace std;

int main()
{
   long long a;
   cin >> a;
   long long b[a];
   long long mn = LLONG_MAX; // Use LLONG_MAX for long long
   for (long long i = 0; i < a; i++) {
       cin >> b[i];
       mn = min(abs(b[i]), mn);
   }
   cout << mn << endl;
   return 0;
}
