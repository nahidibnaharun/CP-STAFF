void solve(){
    int n; string s; cin >> n>>s;
    string ans;
    for(int i=0 ;i<int(s.size()); i+=2)ans+=s[i];
    cout<<ans;
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int Test_Case;
    cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout<<endl;
    }
    return 0;
}
