void solve(){
     int a,b;
   cin>>a>>b;
   int ar[b];
   for(int i=0;i<b;i++){
       cin>>ar[i];
   }
   sort(ar,ar+b);
   int mi=ar[b-1]-ar[0];
   for(int i=0;i<=b-a;i++){
       int diff= ar[i+a-1]-ar[i];
       mi=min(mi,diff);
   }
   cout<<mi;

}
