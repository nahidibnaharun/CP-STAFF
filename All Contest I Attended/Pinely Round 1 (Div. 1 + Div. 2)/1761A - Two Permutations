void solve(){
    int n , a, b; cin >> n >> a >> b;
    int rm=n-b+1;
    if(n==a && n==b || rm>a && rm-a>2 && a<=n && b<=n)cout<<"Yes";
    else cout<<"No";
}
 
 
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    


    ll Test_Case; cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout<<endl;
    }
    return 0;
}

