void solve(){
 ll n,k;cin>>n>>k;
 ll ans=k*n-(k*(k-1))/2;
 if(ans%2)cout<<"No";
 else cout<<"Yes";
 cout<<endl;

}


int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
   int t;cin>>t;
   while(t--)
    solve();
} 
