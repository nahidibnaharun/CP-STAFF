class Solution {
public:
    string maxSumOfSquares(int num, int sum) {
        int dnt=sum;
        if(dnt < 1 || dnt >9LL * num) return "";

        int n= num;
        int rm=dnt;

        string res;
        res.reserve(n);

        for(int i=0 ;i<n ;i++){
            int rem=n-i-1 , low;
            if(i==0)low=max(1,rm-9*rem);
            else low = max(0,rm-9*rem);

            int d= min(9,rm);

            if(d<low) d=low;

            res.push_back(char('0'+d));
            rm -=d;
        }
        return res;
    }
};
