#include<bits/stdc++.h>
using namespace std;
using ll = long long;
const int INF = 1e9;
/*
//	    _   __  ___  __   __ _______ _______
//	   / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//	  /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//	 / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//	/_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/

void solve(){

    ll n,x  ; cin >> n>>x;
    vector<ll>a(n); for(auto &xx:a)cin >>xx;
    sort(a.begin() ,a.end());
    ll j=0 , i=n-1;
    ll sum=0 , ml=1 ,cr=0 , tgt=x;

    vector<ll>ans;
    while(j<=i){
        if(a[i]+cr>=tgt){
            ml++; tgt = x*ml;
            cr+=a[i];
            sum+=a[i];
            ans.push_back(a[i]); i--;
        }
        else{
            ans.push_back(a[j]);
            cr+=a[j];
            j++;
        }
    }
    cout <<sum <<endl;
    for(auto xx:ans)cout<<xx<<" ";

}
 
int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    
    ll Test_Case; cin >> Test_Case;
    while(Test_Case--){
        solve();
        cout << endl;
    }
    
    
    return 0;   
}
