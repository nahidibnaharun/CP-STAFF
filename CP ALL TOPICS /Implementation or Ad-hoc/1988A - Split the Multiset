void solve(){
int n,k;cin>>n>>k;
if(n==1){cout<<0;return;}
int rm=n,cnt=0;
while(true){
    rm-=(k-1);
    cnt++;
    if(rm<=1)break;
}
cout<<cnt;

 }
        
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }
return 0;
}
