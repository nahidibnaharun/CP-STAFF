int main(){
    ios_base::sync_with_stdio(false);
	cin.tie(NULL);
    //  freopen("cownomics.in", "r", stdin); 
    // freopen("cownomics.out", "w", stdout); 
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        vector<int> a(n);
        for(int i=0;i<n;i++)cin>>a[i];
        int bL=0,bR=0,bD=0;
        
        for( int l =0 ; l<n; l++){
            int sum=0;
            for( int r= l+1 ; r<n ; r++){
                int di=0;
                if(a[r] > a[l])di=1;
                else if(a[r]<a[l]) di=-1;
                sum +=di;
                if( sum < bD){
                    bD = sum;
                    bL = l;
                    bR = r;
                }
            }
            
        }cout<<bL+1<<" "<<bR +1<<endl;
    }
    
    return 0;   
}
